{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node", "vitest/globals", "@playwright/test", "@types/supertest"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": false,
    "allowJs": true
  },
  "include": [
    "tests/**/*",
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
