<!-- JoRoMi Integration Component -->
<JoRoMiIntegration />

<!-- Client Login Button Handler (Immediate Fallback) -->
<script>
  console.log('üîß Client Login handler script loaded...');
  
  // Function to open Unified Auth Modal - works immediately
  function openAuthModal() {
    console.log('üîß openAuthModal called');
    const modal = document.getElementById('unified-auth-modal');
    if (modal) {
      console.log('‚úÖ Found unified-auth-modal, opening...');
      modal.classList.remove('hidden');
      modal.style.display = 'block';
      document.body.style.overflow = 'hidden';
      
      // Initialize modal if functions exist
      if (typeof window.resetModal === 'function') {
        window.resetModal();
      }
      if (typeof window.loadCountries === 'function') {
        window.loadCountries();
      }
      
      console.log('‚úÖ Modal opened successfully');
      return true;
    }
    return false;
  }
  
  // Global function for manual execution
  window.openClientLogin = function() {
    console.log('üîß openClientLogin called!');
    
    // Try global function first
    if (typeof window.openUnifiedAuthModal === 'function') {
      console.log('‚úÖ openUnifiedAuthModal function found');
      try {
        window.openUnifiedAuthModal();
        console.log('‚úÖ Unified Auth modal opened via global function');
        return;
      } catch (error) {
        console.error('‚ùå Error opening Unified Auth modal:', error);
      }
    }
    
    // Fallback: Open modal directly
    if (openAuthModal()) {
      return;
    }
    
    console.error('‚ùå unified-auth-modal not found in DOM');
    alert('Authentication service is temporarily unavailable. Please refresh the page and try again.');
  };
  
  // Direct event handler attachment as immediate fallback
  document.addEventListener('DOMContentLoaded', function() {
    console.log('üîß DOMContentLoaded - attaching direct Client Login handlers');
    
    const clientLoginBtn = document.getElementById('client-login-2fa-btn');
    const clientLoginBtnMobile = document.getElementById('client-login-2fa-btn-mobile');
    
    if (clientLoginBtn) {
      // Add click handler directly
      clientLoginBtn.addEventListener('click', function(e) {
        console.log('üîß Client Login button clicked (inline handler)');
        e.preventDefault();
        e.stopPropagation();
        window.openClientLogin();
      });
      console.log('‚úÖ Direct event listener attached to desktop Client Login button');
    }
    
    if (clientLoginBtnMobile) {
      clientLoginBtnMobile.addEventListener('click', function(e) {
        console.log('üîß Mobile Client Login button clicked (inline handler)');
        e.preventDefault();
        e.stopPropagation();
        window.openClientLogin();
      });
      console.log('‚úÖ Direct event listener attached to mobile Client Login button');
    }
  });
  
  // Also try immediately if DOM is already loaded
  if (document.readyState !== 'loading') {
    const clientLoginBtn = document.getElementById('client-login-2fa-btn');
    const clientLoginBtnMobile = document.getElementById('client-login-2fa-btn-mobile');
    
    if (clientLoginBtn) {
      clientLoginBtn.addEventListener('click', function(e) {
        console.log('üîß Client Login button clicked (immediate handler)');
        e.preventDefault();
        e.stopPropagation();
        window.openClientLogin();
      });
      console.log('‚úÖ Immediate event listener attached to desktop Client Login button');
    }
    
    if (clientLoginBtnMobile) {
      clientLoginBtnMobile.addEventListener('click', function(e) {
        console.log('üîß Mobile Client Login button clicked (immediate handler)');
        e.preventDefault();
        e.stopPropagation();
        window.openClientLogin();
      });
      console.log('‚úÖ Immediate event listener attached to mobile Client Login button');
    }
  }
  
  console.log('üîß openClientLogin function defined');
</script> 