---
import '../../styles/tailwind.css';
import Header from './Header.astro';
import Footer from './Footer.astro';
import ServiceModals from '../ServiceModals.astro';
import SeamlessTransition from '../SeamlessTransition.astro';
import IndustryAuth from '../auth/IndustryAuth.astro';
// MainLayout.astro
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content="TETRIX - Enterprise-Grade Communications Platform and AI-Powered Business Workflows" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <title>TETRIX - Enterprise Communications & AI Solutions</title>
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://tetrixcorp.com" />
  <meta property="og:title" content="TETRIX - Enterprise Communications & AI Solutions" />
  <meta property="og:description" content="Transform your enterprise with our comprehensive suite of professional services: IVR Systems, Unified Messaging Platform, Marketing Campaigns, and IoT Telematics." />
  <meta property="og:image" content="https://tetrixcorp.com/og-image.jpg" />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content="https://tetrixcorp.com" />
  <meta property="twitter:title" content="TETRIX - Enterprise Communications & AI Solutions" />
  <meta property="twitter:description" content="Transform your enterprise with our comprehensive suite of professional services: IVR Systems, Unified Messaging Platform, Marketing Campaigns, and IoT Telematics." />
  <meta property="twitter:image" content="https://tetrixcorp.com/og-image.jpg" />

  <!-- Theme color -->
  <meta name="theme-color" content="#FF3B30" />
  
  <!-- PWA Manifest -->
  <link rel="manifest" href="/manifest.json" />
  
  <!-- PWA Meta Tags -->
  <meta name="application-name" content="TETRIX" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="default" />
  <meta name="apple-mobile-web-app-title" content="TETRIX" />
  <meta name="format-detection" content="telephone=no" />
  <meta name="mobile-web-app-capable" content="yes" />
  <meta name="msapplication-config" content="/browserconfig.xml" />
  <meta name="msapplication-TileColor" content="#FF3B30" />
  <meta name="msapplication-tap-highlight" content="no" />
  
  <!-- Apple Touch Icons -->
  <link rel="apple-touch-icon" href="/favicon-192.png" />
  <link rel="apple-touch-icon" sizes="152x152" href="/favicon-192.png" />
  <link rel="apple-touch-icon" sizes="180x180" href="/favicon-192.png" />
  <link rel="apple-touch-icon" sizes="167x167" href="/favicon-192.png" />
  
  <!-- Favicons -->
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="shortcut icon" href="/favicon.ico" />
</head>
<body class="bg-gray-100 min-h-screen">
  <Header />
  <main>
    <slot />
  </main>
  <Footer />

  <!-- Global Service Modals -->
  <ServiceModals />
  
  <!-- Industry Authentication Modal -->
  <IndustryAuth />
  
  <!-- Seamless Transition Component -->
  <SeamlessTransition />
</body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
</style> 