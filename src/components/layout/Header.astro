          maxAttempts,
          openIndustryAuthModal: typeof window.openIndustryAuthModal,
          availableFunctions: Object.keys(window).filter(k => k.includes('Industry') || k.includes('Auth')),
          allWindowKeys: Object.keys(window).slice(0, 30),
