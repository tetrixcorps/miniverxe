<script>
  console.log('üîß Client Login handler script loaded...');
  
  // Global function for manual execution with comprehensive logging
  window.openClientLogin = function() {
    console.log('üîß [VERBOSE] openClientLogin called!');
    console.log('üîß [VERBOSE] Header script execution context:', {
      timestamp: new Date().toISOString(),
      userAgent: navigator.userAgent,
      url: window.location.href,
