                    <div class="flex-shrink-0">
                        <h1 class="text-2xl font-bold text-blue-600">Code Academy</h1>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <button onclick="initiateAuth('code-academy')" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                        Start Learning
                    </button>
                    <button onclick="initiateAuth('code-academy')" class="text-blue-600 hover:text-blue-800 transition-colors">
                        Sign In
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
