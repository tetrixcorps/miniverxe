            <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
                <p>&copy; 2025 TETRIX Corporation. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        // Authentication functions
        function initiateAuth(context) {
            // Open 2FA modal for Code Academy authentication
            if (typeof window.openAuthModal === 'function') {
                window.openAuthModal(context);
            } else {
                // Fallback: redirect to main TETRIX auth
                window.location.href = 'https://tetrixcorp.com#auth';
            }
        }

        function scrollToCourses() {
            document.getElementById('courses').scrollIntoView({ behavior: 'smooth' });
        }

        function contactAdmissions() {
            window.location.href = 'https://tetrixcorp.com/contact';
        }

        // Auto-redirect to external domain after 3 seconds (optional)
        setTimeout(() => {
            if (confirm('Would you like to visit the full Code Academy platform at poisonedreligion.ai?')) {
                window.location.href = '/code-academy';
            }
        }, 3000);
    </script>
