<script>
  // Products Modal functionality
  document.addEventListener('DOMContentLoaded', function() {
    const productsModal = document.getElementById('products-modal');
    const openProductsModal = document.getElementById('open-products-modal');
    const closeProductsModal = document.getElementById('close-products-modal');

    if (openProductsModal) {
      openProductsModal.addEventListener('click', function(e) {
        e.preventDefault();
        productsModal?.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      });
    }

    if (closeProductsModal) {
      closeProductsModal.addEventListener('click', function() {
        productsModal?.classList.add('hidden');
        document.body.style.overflow = 'auto';
      });
    }

    // Close modal when clicking outside
    if (productsModal) {
      productsModal.addEventListener('click', function(e) {
        if (e.target === productsModal) {
          productsModal.classList.add('hidden');
          document.body.style.overflow = 'auto';
        }
      });
    }

    // Close modal with Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && productsModal && !productsModal.classList.contains('hidden')) {
        productsModal.classList.add('hidden');
        document.body.style.overflow = 'auto';
      }
    });
  });
</script>
