                        </div>
                    </div>
                `;
                
                document.body.appendChild(dashboardModal);
            }

            // Close JoRoMi dashboard
            window.closeJoRoMiDashboard = function() {
                const modal = document.getElementById('joromi-dashboard-modal');
                if (modal) {
                    modal.remove();
                }
            };

            // Send message to JoRoMi AI
            window.sendJoRoMiMessage = function() {
                const input = document.getElementById('joromi-chat-input');
                const chat = document.getElementById('joromi-ai-chat');
                
                if (input && chat && input.value.trim()) {
                    const message = input.value.trim();
                    
                    // Add user message
                    const userMessage = document.createElement('div');
                    userMessage.className = 'flex justify-end mb-3';
                    userMessage.innerHTML = `
                        <div class="bg-purple-600 text-white p-3 rounded-lg max-w-xs">
                            <p class="text-sm">${message}</p>
                        </div>
                    `;
                    chat.appendChild(userMessage);
                    
                    // Add AI response (placeholder)
                    const aiResponse = document.createElement('div');
                    aiResponse.className = 'flex justify-start mb-3';
                    aiResponse.innerHTML = `
                        <div class="bg-white border p-3 rounded-lg max-w-xs">
                            <p class="text-sm text-gray-800">
                                I understand you're asking about "${message}". Let me help you with that. 
                                JoRoMi offers advanced AI communication tools including voice processing, 
                                smart messaging, and video communication features.
                            </p>
                        </div>
                    `;
                    chat.appendChild(aiResponse);
                    
                    // Clear input
                    input.value = '';
                    
                    // Scroll to bottom
                    chat.scrollTop = chat.scrollHeight;
                }
            };

            // Add event listeners
            if (startPlatformBtn) {
                startPlatformBtn.addEventListener('click', startJoRoMiSession);
