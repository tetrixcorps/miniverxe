    <!-- JavaScript for interactivity -->
    <script>
        // Initialize JoRoMi functionality
        document.addEventListener('DOMContentLoaded', function() {
            console.log('JoRoMi platform page loaded successfully!');
            
            // Button event listeners
            const startPlatformBtn = document.getElementById('start-platform-btn');
            const getStartedBtn = document.getElementById('get-started-btn');
            const viewDemoBtn = document.getElementById('view-demo-btn');
            const tryAiBtn = document.getElementById('try-ai-btn');
            const startSessionBtn = document.getElementById('start-session-btn');
            const startPlatformBtn2 = document.getElementById('start-platform-btn-2');
            const contactSalesBtn = document.getElementById('contact-sales-btn');

            // Start JoRoMi platform session with 2FA authentication
            function startJoRoMiSession() {
                console.log('Starting JoRoMi platform session with authentication...');
                
                // Set authentication context for JoRoMi platform
                window.tetrixAuthContext = 'joromi';
                
                // Wait for 2FA modal to be available
                let attempts = 0;
                const maxAttempts = 50; // 5 seconds max wait time
                
                const waitFor2FAModal = () => {
                    attempts++;
                    console.log(`JoRoMi: Attempt ${attempts}/${maxAttempts}: Checking for 2FA modal...`);
                    
                    if (window.open2FAModal) {
                        console.log('JoRoMi: 2FA modal found, opening...');
                        window.open2FAModal();
                    } else if (window.twoFAManager) {
                        // Fallback: try to open modal directly
                        console.log('JoRoMi: 2FA manager found, opening modal directly...');
                        window.twoFAManager.updateAuthContext();
                        window.twoFAManager.openModal();
                    } else if (attempts < maxAttempts) {
                        // Wait a bit more and try again
                        console.log(`JoRoMi: Waiting for 2FA modal... attempt ${attempts}/${maxAttempts}`);
                        setTimeout(waitFor2FAModal, 100);
                    } else {
                        // Timeout reached
                        console.error('JoRoMi: 2FA modal not available after maximum attempts');
                        alert('Authentication system is loading. Please wait a moment and try again.');
                    }
                };
                
                // Start checking for 2FA modal availability
                waitFor2FAModal();
            }

            // Show JoRoMi interface after successful authentication
            window.showJoRoMiInterface = function(session) {
                console.log('JoRoMi interface for session:', session.id);
                
                // Create JoRoMi dashboard modal
