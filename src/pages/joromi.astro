    <!-- JavaScript for interactivity -->
    <script>
        // Initialize JoRoMi functionality
        document.addEventListener('DOMContentLoaded', function() {
            console.log('JoRoMi platform page loaded successfully!');
            
            // Button event listeners
            const startPlatformBtn = document.getElementById('start-platform-btn');
            const getStartedBtn = document.getElementById('get-started-btn');
            const viewDemoBtn = document.getElementById('view-demo-btn');
            const tryAiBtn = document.getElementById('try-ai-btn');
            const startSessionBtn = document.getElementById('start-session-btn');
            const startPlatformBtn2 = document.getElementById('start-platform-btn-2');
            const contactSalesBtn = document.getElementById('contact-sales-btn');

            // Start JoRoMi platform session with SinchChatLive
            function startJoRoMiSession() {
                console.log('Starting JoRoMi platform session...');
                
                // Create a session with SHANGO AI
                fetch('/api/v1/shango/sessions', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        userId: 'joromi-user-' + Date.now(),
                        agentId: 'shango-general'
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        console.log('JoRoMi session started:', data.session);
                        alert('Welcome to JoRoMi! Your AI communication session has started. You can now interact with our AI assistant.');
                        
                        // Show the communication interface
                        showJoRoMiInterface(data.session);
                    } else {
                        console.error('Failed to start JoRoMi session:', data);
                        alert('Failed to start JoRoMi session. Please try again.');
                    }
                })
                .catch(error => {
                    console.error('Error starting JoRoMi session:', error);
                    alert('Error starting JoRoMi session. Please try again.');
                });
            }

            // Show JoRoMi interface (placeholder)
            function showJoRoMiInterface(session) {
                console.log('JoRoMi interface for session:', session.id);
                
                // For demo purposes, show a simple interface
                const demo = document.getElementById('ai-chat-demo');
                if (demo) {
                    demo.innerHTML = `
                        <div class="space-y-4">
                            <div class="flex justify-start">
                                <div class="bg-white border p-3 rounded-lg max-w-2xl">
                                    <div class="flex items-center mb-2">
                                        <div class="w-6 h-6 bg-gradient-to-r from-purple-500 to-blue-600 rounded-full flex items-center justify-center text-white text-xs font-bold mr-2">
                                            ü§ñ
                                        </div>
                                        <span class="text-sm font-semibold text-gray-700">JoRoMi AI</span>
                                    </div>
                                    <p class="text-gray-800">
                                        Welcome to JoRoMi! I'm your AI communication assistant. 
                                        I can help you with voice processing, messaging automation, 
                                        video communication, and intelligent workflow management. 
                                        What would you like to explore today?
                                    </p>
                                </div>
                            </div>
                        </div>
                    `;
                }
            }

            // Add event listeners
            if (startPlatformBtn) {
                startPlatformBtn.addEventListener('click', startJoRoMiSession);
            }
            
            if (getStartedBtn) {
                getStartedBtn.addEventListener('click', startJoRoMiSession);
            }
            
            if (tryAiBtn) {
                tryAiBtn.addEventListener('click', startJoRoMiSession);
            }
            
            if (startSessionBtn) {
                startSessionBtn.addEventListener('click', startJoRoMiSession);
            }
            
            if (startPlatformBtn2) {
                startPlatformBtn2.addEventListener('click', startJoRoMiSession);
            }

            // Placeholder for other buttons
