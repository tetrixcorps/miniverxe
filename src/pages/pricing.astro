      <h1 class="text-4xl md:text-6xl font-heading font-extrabold mb-6">
        Enterprise-Grade Pricing
      </h1>
      <p class="text-xl md:text-2xl mb-8">
        Transparent, scalable pricing for AI-powered communication and workflow automation. 
        Choose the perfect plan for your industry and organization size.
      </p>
    </div>
  </section>

  <!-- Industry Tabs -->
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Choose Your Industry</h2>
        <p class="text-lg text-gray-600">Select your industry to see tailored pricing and features</p>
      </div>
      <div class="flex flex-wrap justify-center gap-3 mb-8">
        <button id="healthcare-tab" class="px-4 py-2 rounded-lg bg-brand-red text-white font-semibold shadow-lg transition-colors text-sm">
          🏥 Healthcare
        </button>
        <button id="construction-tab" class="px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-semibold hover:bg-gray-300 transition-colors text-sm">
          🏗️ Construction
        </button>
        <button id="logistics-tab" class="px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-semibold hover:bg-gray-300 transition-colors text-sm">
          🚛 Logistics
        </button>
        <button id="government-tab" class="px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-semibold hover:bg-gray-300 transition-colors text-sm">
          🏛️ Government
        </button>
        <button id="education-tab" class="px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-semibold hover:bg-gray-300 transition-colors text-sm">
          🎓 Education
        </button>
        <button id="retail-tab" class="px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-semibold hover:bg-gray-300 transition-colors text-sm">
          🛒 Retail
        </button>
        <button id="hospitality-tab" class="px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-semibold hover:bg-gray-300 transition-colors text-sm">
          🏨 Hospitality
        </button>
        <button id="wellness-tab" class="px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-semibold hover:bg-gray-300 transition-colors text-sm">
          💪 Wellness
        </button>
        <button id="beauty-tab" class="px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-semibold hover:bg-gray-300 transition-colors text-sm">
          💄 Beauty
        </button>
      </div>
    </div>
  </section>

  <!-- Healthcare Pricing Plans -->
  <section id="healthcare-pricing" class="py-20 bg-white">
