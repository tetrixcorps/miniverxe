        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-3xl font-heading font-bold text-center text-brand-dark mb-12">
        Frequently Asked Questions
      </h2>
      
      <div class="space-y-6">
        {faqs.map((faq, index) => (
          <div class="border border-gray-200 rounded-lg">
            <button 
              class="faq-toggle w-full px-6 py-4 text-left flex items-center justify-between hover:bg-gray-50 transition-colors"
              data-faq={index}
            >
              <span class="font-semibold text-brand-dark">{faq.question}</span>
              <svg class="w-5 h-5 text-gray-500 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="faq-content hidden px-6 pb-4">
              <p class="text-gray-600">{faq.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-brand-dark text-white">
    <div class="max-w-4xl mx-auto text-center px-4">
      <h2 class="text-3xl font-heading font-bold mb-6">
        Ready to Get Started?
      </h2>
      <p class="text-xl mb-8">
        Start your 30-day free trial today. No credit card required.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact" variant="primary" size="lg">
          Start Free Trial
        </Button>
        <Button href="/docs" variant="secondary" size="lg">
          View Documentation
        </Button>
      </div>
    </div>
  </section>
</MainLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // FAQ Toggle
    const faqToggles = document.querySelectorAll('.faq-toggle');
    
    faqToggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        const content = toggle.nextElementSibling;
        const icon = toggle.querySelector('svg');
        
        // Toggle content
        content.classList.toggle('hidden');
        
        // Rotate icon
        if (content.classList.contains('hidden')) {
          icon.style.transform = 'rotate(0deg)';
        } else {
          icon.style.transform = 'rotate(180deg)';
        }
      });
    });
    
    // Industry Tab Toggle
    const tabs = {
      healthcare: document.getElementById('healthcare-tab'),
      legal: document.getElementById('legal-tab'),
      business: document.getElementById('business-tab')
    };
    
    const sections = {
      healthcare: document.getElementById('healthcare-pricing'),
      legal: document.getElementById('legal-pricing'),
      business: document.getElementById('business-pricing')
    };
    
    function switchTab(activeTab) {
      // Reset all tabs
      Object.values(tabs).forEach(tab => {
        tab.className = 'px-6 py-3 rounded-lg bg-gray-200 text-gray-700 font-semibold hover:bg-gray-300 transition-colors';
      });
      
      // Reset all sections
      Object.values(sections).forEach(section => {
        section.classList.add('hidden');
      });
      
      // Activate selected tab
      tabs[activeTab].className = 'px-6 py-3 rounded-lg bg-brand-red text-white font-semibold shadow-lg transition-colors';
      
      // Show selected section
      sections[activeTab].classList.remove('hidden');
    }
    
    // Add event listeners
    tabs.healthcare.addEventListener('click', () => switchTab('healthcare'));
    tabs.legal.addEventListener('click', () => switchTab('legal'));
    tabs.business.addEventListener('click', () => switchTab('business'));
  });
</script>