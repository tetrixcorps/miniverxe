---

<MainLayout>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-brand-red via-brand-orange to-brand-yellow text-white py-20">
    <div class="max-w-4xl mx-auto text-center px-4">
      <h1 class="text-4xl md:text-6xl font-heading font-extrabold mb-6">
        Enterprise-Grade Pricing
      </h1>
      <p class="text-xl md:text-2xl mb-8">
        Transparent, scalable pricing for AI-powered communication and workflow automation. 
        Choose the perfect plan for your industry and organization size.
      </p>
    </div>
  </section>

  <!-- Industry Tabs -->
  <section class="py-12 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="flex flex-wrap justify-center gap-4 mb-8">
        <button id="healthcare-tab" class="px-6 py-3 rounded-lg bg-brand-red text-white font-semibold shadow-lg transition-colors">
          Healthcare
        </button>
        <button id="legal-tab" class="px-6 py-3 rounded-lg bg-gray-200 text-gray-700 font-semibold hover:bg-gray-300 transition-colors">
          Legal
        </button>
        <button id="business-tab" class="px-6 py-3 rounded-lg bg-gray-200 text-gray-700 font-semibold hover:bg-gray-300 transition-colors">
          General Business
        </button>
      </div>
    </div>
  </section>

  <!-- Healthcare Pricing Plans -->
  <section id="healthcare-pricing" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-heading font-bold text-brand-dark mb-4">Healthcare Solutions</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          AI-powered healthcare communication and automation services designed for organizations of all sizes
        </p>
      </div>

      <div class="grid gap-8 lg:grid-cols-4">
        {healthcarePlans.map(plan => (
          <div class={`relative bg-white rounded-2xl shadow-lg border-2 p-8 ${plan.popular ? 'border-brand-red scale-105' : 'border-gray-200'}`}>
            {plan.popular && (
              <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                <span class="bg-brand-red text-white px-4 py-2 rounded-full text-sm font-semibold">
                  Most Popular
                </span>
              </div>
            )}
            
            <div class="text-center mb-8">
              <h3 class="text-2xl font-bold text-brand-dark mb-2">{plan.name}</h3>
              <p class="text-gray-600 mb-4">{plan.description}</p>
              <div class="mb-4">
                <span class="text-4xl font-bold text-brand-dark">{plan.price}</span>
                <span class="text-gray-600">/{plan.period}</span>
              </div>
            </div>
            
            <ul class="space-y-4 mb-8">
              {plan.features.map(feature => (
                <li class="flex items-center gap-3">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700">{feature}</span>
                </li>
              ))}
            </ul>
            
            <Button 
              href={plan.name === "Enterprise" ? "/contact" : "/contact"} 
              variant={plan.popular ? "primary" : "secondary"}
              class="w-full"
            >
              {plan.cta}
            </Button>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Legal Pricing Plans -->
  <section id="legal-pricing" class="py-20 bg-gray-50 hidden">
