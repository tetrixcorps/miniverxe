      government: document.getElementById('government-tab'),
      education: document.getElementById('education-tab'),
      retail: document.getElementById('retail-tab'),
      hospitality: document.getElementById('hospitality-tab'),
      wellness: document.getElementById('wellness-tab'),
      beauty: document.getElementById('beauty-tab'),
      legal: document.getElementById('legal-tab'),
      business: document.getElementById('business-tab')
    };
    
    const sections = {
      healthcare: document.getElementById('healthcare-pricing'),
      construction: document.getElementById('construction-pricing'),
      logistics: document.getElementById('logistics-pricing'),
      government: document.getElementById('government-pricing'),
      education: document.getElementById('education-pricing'),
      retail: document.getElementById('retail-pricing'),
      hospitality: document.getElementById('hospitality-pricing'),
      wellness: document.getElementById('wellness-pricing'),
      beauty: document.getElementById('beauty-pricing'),
      legal: document.getElementById('legal-pricing'),
      business: document.getElementById('business-pricing')
    };
    
    function switchTab(activeTab) {
      // Reset all tabs
      Object.values(tabs).forEach(tab => {
        if (tab) {
          tab.className = 'px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-semibold hover:bg-gray-300 transition-colors text-sm';
        }
      });
      
      // Reset all sections
      Object.values(sections).forEach(section => {
        if (section) {
        section.classList.add('hidden');
        }
      });
      
      // Activate selected tab
      if (tabs[activeTab]) {
        tabs[activeTab].className = 'px-4 py-2 rounded-lg bg-brand-red text-white font-semibold shadow-lg transition-colors text-sm';
      }
      
      // Show selected section
      if (sections[activeTab]) {
      sections[activeTab].classList.remove('hidden');
      }
    }
    
    // Add event listeners for all tabs
    Object.keys(tabs).forEach(industry => {
      if (tabs[industry]) {
        tabs[industry].addEventListener('click', () => switchTab(industry));
      }
    });
  });
</script>