---
// Government Dashboard - Enterprise Grade
// Citizen services, emergency services, permit management
// Refactored with modern UI/UX best practices and React Islands

import DashboardLayout from '../../components/dashboards/DashboardLayout.astro';
import { DashboardMetrics } from '../../components/dashboard/react/DashboardMetrics';
import { SalesforceWidget } from '../../components/dashboard/react/SalesforceWidget';
import { HubSpotWidget } from '../../components/dashboard/react/HubSpotWidget';

// Server-Side Logic: Fetch User Session
const cookie = Astro.request.headers.get('cookie');
const hasSession = cookie?.includes('tetrix_access_token') || cookie?.includes('better-auth.session_token');

if (!hasSession) {
  return Astro.redirect('/login?redirect=/dashboards/government');
}
---

<DashboardLayout title="Government Dashboard" industry="government">
  <!-- Hero Section with Key Metrics -->
  <div class="mb-8">
    <!-- Status Bar -->
    <div class="bg-gradient-to-r from-slate-600 to-gray-700 rounded-xl shadow-lg mb-6 p-6 text-white">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
            <span class="text-sm font-medium">System Online</span>
          </div>
          <div class="h-4 w-px bg-white/30"></div>
          <span class="text-sm">Last updated: <span id="last-update-time" class="font-semibold">Just now</span></span>
        </div>
        <div class="flex items-center space-x-3">
          <button 
            onclick="window.location.reload()"
            class="bg-white/20 backdrop-blur-sm text-white p-2 rounded-lg hover:bg-white/30 transition-all duration-200 border border-white/30"
            aria-label="Refresh data"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Key Metrics Cards - React Island -->
    <DashboardMetrics industry="government" client:load />
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Citizen Services - Enhanced -->
    <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
      <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold text-gray-900">Citizen Services</h3>
            <p class="text-sm text-gray-500 mt-1">127 active requests</p>
          </div>
          <button class="text-sm text-blue-600 hover:text-blue-700 font-medium">View All</button>
        </div>
      </div>
      <div class="p-6">
        <div class="space-y-3" id="citizen-services-list">
          <div class="group relative bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-4 border border-blue-200 hover:shadow-md transition-all duration-200 cursor-pointer">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4 flex-1">
                <div class="relative">
                  <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center shadow-lg">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div class="absolute -top-1 -right-1 w-4 h-4 bg-blue-400 rounded-full border-2 border-white animate-pulse"></div>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-semibold text-gray-900">Business License Application</p>
                  <p class="text-sm text-gray-600 mt-0.5">Request #BL-2024-001</p>
                  <p class="text-xs text-gray-500 mt-1">Under Review</p>
                </div>
              </div>
              <div class="ml-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-800 border border-blue-200">
                  Processing
                </span>
              </div>
            </div>
          </div>

          <div class="group relative bg-gradient-to-r from-green-50 to-emerald-50 rounded-lg p-4 border border-green-200 hover:shadow-md transition-all duration-200 cursor-pointer">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4 flex-1">
                <div class="relative">
                  <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center shadow-lg">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div class="absolute -top-1 -right-1 w-4 h-4 bg-green-400 rounded-full border-2 border-white"></div>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-semibold text-gray-900">Property Tax Inquiry</p>
                  <p class="text-sm text-gray-600 mt-0.5">Request #PT-2024-045</p>
                  <p class="text-xs text-gray-500 mt-1">Resolved</p>
                </div>
              </div>
              <div class="ml-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800 border border-green-200">
                  Completed
                </span>
              </div>
            </div>
          </div>

          <div class="group relative bg-gradient-to-r from-amber-50 to-yellow-50 rounded-lg p-4 border border-amber-200 hover:shadow-md transition-all duration-200 cursor-pointer">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4 flex-1">
                <div class="relative">
                  <div class="w-10 h-10 bg-amber-500 rounded-full flex items-center justify-center shadow-lg">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div class="absolute -top-1 -right-1 w-4 h-4 bg-amber-400 rounded-full border-2 border-white"></div>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-semibold text-gray-900">Building Permit</p>
                  <p class="text-sm text-gray-600 mt-0.5">Request #BP-2024-023</p>
                  <p class="text-xs text-gray-500 mt-1">Pending Documents</p>
                </div>
              </div>
              <div class="ml-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-amber-100 text-amber-800 border border-amber-200">
                  Pending
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Emergency Services - Enhanced -->
    <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
      <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold text-gray-900">Emergency Services</h3>
            <p class="text-sm text-gray-500 mt-1">12 active calls</p>
          </div>
          <button class="text-sm text-red-600 hover:text-red-700 font-medium">View All</button>
        </div>
      </div>
      <div class="p-6">
        <div class="space-y-4" id="emergency-services-list">
          <div class="relative pl-4 border-l-4 border-red-500">
            <div class="absolute -left-2 top-0 w-4 h-4 bg-red-500 rounded-full border-2 border-white animate-pulse"></div>
            <div class="bg-red-50 rounded-lg p-4">
              <div class="flex items-start justify-between mb-2">
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                  </svg>
                  <span class="text-xs font-semibold text-red-800">High Priority</span>
                </div>
                <span class="text-xs text-red-600">15m ago</span>
              </div>
              <p class="text-sm text-red-900 font-medium mb-1">Fire emergency</p>
              <p class="text-sm text-red-700">Downtown area - Response dispatched</p>
            </div>
          </div>

          <div class="relative pl-4 border-l-4 border-amber-500">
            <div class="absolute -left-2 top-0 w-4 h-4 bg-amber-500 rounded-full border-2 border-white"></div>
            <div class="bg-amber-50 rounded-lg p-4">
              <div class="flex items-start justify-between mb-2">
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                  </svg>
                  <span class="text-xs font-semibold text-amber-800">Medium Priority</span>
                </div>
                <span class="text-xs text-amber-600">45m ago</span>
              </div>
              <p class="text-sm text-amber-900 font-medium mb-1">Traffic accident</p>
              <p class="text-sm text-amber-700">Highway 101 - Units en route</p>
            </div>
          </div>

          <div class="relative pl-4 border-l-4 border-blue-500">
            <div class="absolute -left-2 top-0 w-4 h-4 bg-blue-500 rounded-full border-2 border-white"></div>
            <div class="bg-blue-50 rounded-lg p-4">
              <div class="flex items-start justify-between mb-2">
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-xs font-semibold text-blue-800">Information</span>
                </div>
                <span class="text-xs text-blue-600">2h ago</span>
              </div>
              <p class="text-sm text-blue-900 font-medium mb-1">Weather advisory</p>
              <p class="text-sm text-blue-700">Public notification issued</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Citizen CRM Integrations - React Islands -->
  <div class="mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">Citizen Relationship Management</h2>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <SalesforceWidget client:visible />
      <HubSpotWidget client:visible />
    </div>
  </div>
</DashboardLayout>

<script>
  // Simple clock update
  (function() {
    function updateLastUpdateTime() {
      const element = document.getElementById('last-update-time');
      if (element) {
        const now = new Date();
        element.textContent = now.toLocaleTimeString('en-US', { 
          hour: '2-digit', 
          minute: '2-digit',
          second: '2-digit'
        });
      }
    }
    updateLastUpdateTime();
    setInterval(updateLastUpdateTime, 60000);
  })();
</script>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in { animation: fadeIn 0.3s ease-out; }
</style>
