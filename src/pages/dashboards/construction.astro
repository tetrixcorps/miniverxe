</div>

<!-- Stripe Checkout Modal -->
<StripeCheckoutModal 
  priceId="price_construction_individual"
  serviceType="construction"
  planName="Individual Contractor"
  basePrice={150}
  period="per contractor/month"
  features={[
    "2,000 AI voice sessions/month",
    "Project status updates",
    "Safety alerts and notifications",
    "Resource management",
    "Basic reporting",
    "Mobile app access",
    "Email support"
  ]}
  trialDays={7}
  successUrl="/dashboards/construction?trial=success"
  cancelUrl="/dashboards/construction?trial=cancelled"
/>

<script>
  // Auto-refresh functionality
  setInterval(() => {
    // Simulate data refresh
    console.log('Refreshing construction dashboard data...');
  }, 30000);

  // Refresh button functionality
  document.getElementById('refresh-btn')?.addEventListener('click', () => {
    location.reload();
  });
</script>
