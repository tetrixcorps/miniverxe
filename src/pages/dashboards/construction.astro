      </div>
    </div>

    <!-- CRM Integrations -->
    <div class="mt-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">CRM Integrations</h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <SalesforceIntegration />
        <HubSpotIntegration />
      </div>
    </div>

    <!-- Workflow Automation -->
    <div class="mt-8">
      <WorkflowAutomation industry="construction" />
    </div>

    <!-- Pricing Section -->
    <div class="mt-12">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Choose Your Construction Plan</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Start with a 7-day free trial. No charges during trial period. Payment method required to begin.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <PricingCard 
          serviceType="construction" 
          tier="individual" 
          successUrl="/dashboards/construction?trial=success"
          cancelUrl="/dashboards/construction?trial=cancelled"
        />
        <PricingCard 
          serviceType="construction" 
          tier="small" 
          isPopular={true}
          successUrl="/dashboards/construction?trial=success"
          cancelUrl="/dashboards/construction?trial=cancelled"
        />
        <PricingCard 
          serviceType="construction" 
          tier="professional" 
          successUrl="/dashboards/construction?trial=success"
          cancelUrl="/dashboards/construction?trial=cancelled"
        />
        <PricingCard 
          serviceType="construction" 
          tier="enterprise" 
          showTrialButton={false}
          successUrl="/dashboards/construction?trial=success"
          cancelUrl="/dashboards/construction?trial=cancelled"
        />
      </div>

      <!-- Trial Information -->
      <div class="mt-8 bg-gradient-to-r from-orange-50 to-amber-50 rounded-xl p-6 border border-orange-200">
        <div class="flex items-center space-x-4">
