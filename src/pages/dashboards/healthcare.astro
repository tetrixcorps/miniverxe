---
// Healthcare Dashboard
// Appointment scheduling, patient communication, emergency triage

import SalesforceIntegration from '../../components/dashboards/SalesforceIntegration.astro';
import HubSpotIntegration from '../../components/dashboards/HubSpotIntegration.astro';
import EpicIntegration from '../../components/dashboards/EpicIntegration.astro';
import WorkflowAutomation from '../../components/dashboards/WorkflowAutomation.astro';
---

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <div class="flex items-center">
          <h1 class="text-2xl font-bold text-gray-900">Healthcare Dashboard</h1>
          <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            üè• Healthcare
          </span>
        </div>
        <div class="flex items-center space-x-4">
          <div class="flex items-center text-sm text-gray-500">
            <div class="w-2 h-2 bg-green-400 rounded-full mr-2"></div>
            System Online
          </div>
          <button id="refresh-btn" class="p-2 text-gray-400 hover:text-gray-600 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Key Metrics -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
              <span class="text-blue-600 text-lg">üë•</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Patients Today</p>
            <p class="text-2xl font-semibold text-gray-900">48</p>
          </div>
        </div>
      </div>
      
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
              <span class="text-green-600 text-lg">üìÖ</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Appointments Scheduled</p>
            <p class="text-2xl font-semibold text-gray-900">32</p>
          </div>
        </div>
      </div>
      
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center">
              <span class="text-red-600 text-lg">üö®</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Emergency Cases</p>
            <p class="text-2xl font-semibold text-gray-900">3</p>
          </div>
        </div>
      </div>
      
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
              <span class="text-purple-600 text-lg">‚≠ê</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Patient Satisfaction</p>
            <p class="text-2xl font-semibold text-gray-900">4.8/5</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Appointment Scheduling & Emergency Triage -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Appointment Scheduling -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Today's Appointments</h3>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div class="flex items-center justify-between p-4 bg-blue-50 rounded-lg">
              <div class="flex items-center">
                <div class="w-3 h-3 bg-blue-400 rounded-full mr-3"></div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Dr. Smith - Cardiology</p>
                  <p class="text-sm text-gray-500">Patient: John Doe - 9:00 AM</p>
                </div>
              </div>
              <span class="text-sm text-blue-600 font-medium">Confirmed</span>
            </div>
            
            <div class="flex items-center justify-between p-4 bg-yellow-50 rounded-lg">
              <div class="flex items-center">
                <div class="w-3 h-3 bg-yellow-400 rounded-full mr-3"></div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Dr. Johnson - Pediatrics</p>
                  <p class="text-sm text-gray-500">Patient: Jane Smith - 10:30 AM</p>
                </div>
              </div>
              <span class="text-sm text-yellow-600 font-medium">Waiting</span>
            </div>
            
            <div class="flex items-center justify-between p-4 bg-green-50 rounded-lg">
              <div class="flex items-center">
                <div class="w-3 h-3 bg-green-400 rounded-full mr-3"></div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Dr. Brown - General Practice</p>
                  <p class="text-sm text-gray-500">Patient: Mike Wilson - 11:15 AM</p>
                </div>
              </div>
              <span class="text-sm text-green-600 font-medium">In Progress</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Emergency Triage -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Emergency Triage</h3>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div class="flex items-start p-4 bg-red-50 rounded-lg border-l-4 border-red-400">
              <div class="flex-shrink-0">
                <span class="text-red-600 text-lg">üö®</span>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-red-800">Critical</p>
                <p class="text-sm text-red-700">Chest pain - Patient ID: 12345</p>
                <p class="text-xs text-red-600 mt-1">Arrived 5 minutes ago</p>
              </div>
            </div>
            
            <div class="flex items-start p-4 bg-yellow-50 rounded-lg border-l-4 border-yellow-400">
              <div class="flex-shrink-0">
                <span class="text-yellow-600 text-lg">‚ö†Ô∏è</span>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-yellow-800">Urgent</p>
                <p class="text-sm text-yellow-700">Fever and headache - Patient ID: 12346</p>
                <p class="text-xs text-yellow-600 mt-1">Arrived 15 minutes ago</p>
              </div>
            </div>
            
            <div class="flex items-start p-4 bg-blue-50 rounded-lg border-l-4 border-blue-400">
              <div class="flex-shrink-0">
                <span class="text-blue-600 text-lg">‚ÑπÔ∏è</span>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-blue-800">Non-Urgent</p>
                <p class="text-sm text-blue-700">Minor injury - Patient ID: 12347</p>
                <p class="text-xs text-blue-600 mt-1">Arrived 30 minutes ago</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Patient Communication -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Patient Communication</h3>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-3xl font-bold text-green-600 mb-2">156</div>
            <p class="text-sm text-gray-600">Appointment Reminders Sent</p>
            <div class="w-full bg-gray-200 rounded-full h-2 mt-2">
              <div class="bg-green-600 h-2 rounded-full" style="width: 100%"></div>
            </div>
          </div>
          
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600 mb-2">89%</div>
            <p class="text-sm text-gray-600">Response Rate</p>
            <div class="w-full bg-gray-200 rounded-full h-2 mt-2">
              <div class="bg-blue-600 h-2 rounded-full" style="width: 89%"></div>
            </div>
          </div>
          
          <div class="text-center">
            <div class="text-3xl font-bold text-purple-600 mb-2">24</div>
            <p class="text-sm text-gray-600">Follow-up Calls</p>
            <div class="w-full bg-gray-200 rounded-full h-2 mt-2">
              <div class="bg-purple-600 h-2 rounded-full" style="width: 75%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Recent Activity</h3>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                <span class="text-green-600 text-sm">‚úÖ</span>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-900">Appointment completed: Dr. Smith - Cardiology</p>
              <p class="text-xs text-gray-500">Patient: John Doe - 2 hours ago</p>
            </div>
          </div>
          
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                <span class="text-blue-600 text-sm">üìû</span>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-900">Patient communication sent: Appointment reminder</p>
              <p class="text-xs text-gray-500">32 patients notified - 1 hour ago</p>
            </div>
          </div>
          
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
                <span class="text-red-600 text-sm">üö®</span>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-900">Emergency case triaged: Chest pain</p>
              <p class="text-xs text-gray-500">Patient ID: 12345 - 3 hours ago</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Healthcare Integrations -->
    <div class="mt-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Healthcare Integrations</h2>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <EpicIntegration />
        <SalesforceIntegration />
        <HubSpotIntegration />
      </div>
    </div>

    <!-- Workflow Automation -->
    <div class="mt-8">
      <WorkflowAutomation industry="healthcare" />
    </div>
  </div>
</div>

<script>
  // Auto-refresh functionality
  setInterval(() => {
    // Simulate data refresh
    console.log('Refreshing healthcare dashboard data...');
  }, 30000);

  // Refresh button functionality
  document.getElementById('refresh-btn')?.addEventListener('click', () => {
    location.reload();
  });
</script>
