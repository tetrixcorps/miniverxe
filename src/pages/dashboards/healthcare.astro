---
// Healthcare Dashboard - Enterprise Grade
// Appointment scheduling, patient communication, emergency triage
// Refactored with modern UI/UX best practices and React Islands

import DashboardLayout from '../../components/dashboards/DashboardLayout.astro';
// import { DashboardMetrics } from '../../components/dashboard/react/DashboardMetrics'; // Missing
// import { SalesforceWidget } from '../../components/dashboard/react/SalesforceWidget'; // Missing
// import { HubSpotWidget } from '../../components/dashboard/react/HubSpotWidget'; // Missing
// import { EpicWidget } from '../../components/dashboard/react/EpicWidget'; // Missing
import WorkflowAutomation from '../../components/dashboards/WorkflowAutomation.astro';
import PricingCard from '../../components/stripe/PricingCard.astro';
import StripeCheckoutModal from '../../components/stripe/StripeCheckoutModal.astro';

// Server-Side Logic: Fetch User Session & Data
// This connects the frontend dashboard to the actual authentication context
const cookie = Astro.request.headers.get('cookie');
const hasSession = cookie?.includes('tetrix_access_token') || cookie?.includes('better-auth.session_token');

// Redirect to login if no session found
if (!hasSession) {
  return Astro.redirect('/login?redirect=/dashboards/healthcare');
}

// In a real app, we might decode the token here to pass user info to the layout or widgets
// For now, the widgets handle their own data fetching.
---

<DashboardLayout title="Healthcare Dashboard" industry="healthcare">
  <!-- Hero Section with Key Metrics -->
  <div class="mb-8">
    <!-- Status Bar -->
    <div class="bg-gradient-to-r from-green-600 to-emerald-600 rounded-xl shadow-lg mb-6 p-6 text-white">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
            <span class="text-sm font-medium">System Online</span>
          </div>
          <div class="h-4 w-px bg-white/30"></div>
          <span class="text-sm">Organization: <span class="font-semibold">Healthcare Provider Inc.</span></span>
          <div class="h-4 w-px bg-white/30"></div>
          <span class="text-sm">Last updated: <span id="last-update-time" class="font-semibold">Just now</span></span>
        </div>
        <div class="flex items-center space-x-3">
          <button 
            onclick="window.location.reload()"
            class="bg-white/20 backdrop-blur-sm text-white p-2 rounded-lg hover:bg-white/30 transition-all duration-200 border border-white/30"
            aria-label="Refresh data"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Key Metrics Cards - React Island (Placeholder) -->
    <!-- <DashboardMetrics industry="healthcare" client:load /> -->
    <div class="p-6 bg-white rounded-xl shadow-md text-center text-gray-500">Dashboard Metrics loading...</div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Appointment Scheduling - Enhanced -->
    <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
      <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold text-gray-900">Today's Appointments</h3>
            <p class="text-sm text-gray-500 mt-1">32 appointments scheduled</p>
          </div>
          <button class="text-sm text-green-600 hover:text-green-700 font-medium">View All</button>
        </div>
      </div>
      <div class="p-6">
        <div class="space-y-3" id="appointments-list">
          <div class="group relative bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-4 border border-blue-200 hover:shadow-md transition-all duration-200 cursor-pointer">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4 flex-1">
                <div class="relative">
                  <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center shadow-lg">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div class="absolute -top-1 -right-1 w-4 h-4 bg-blue-400 rounded-full border-2 border-white"></div>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-semibold text-gray-900">Dr. Smith - Cardiology</p>
                  <p class="text-sm text-gray-600 mt-0.5">Patient: John Doe</p>
                  <p class="text-xs text-gray-500 mt-1 flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    9:00 AM
                  </p>
                </div>
              </div>
              <div class="ml-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-800 border border-blue-200">
                  Confirmed
                </span>
              </div>
            </div>
          </div>

          <div class="group relative bg-gradient-to-r from-amber-50 to-yellow-50 rounded-lg p-4 border border-amber-200 hover:shadow-md transition-all duration-200 cursor-pointer">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4 flex-1">
                <div class="relative">
                  <div class="w-10 h-10 bg-amber-500 rounded-full flex items-center justify-center shadow-lg">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div class="absolute -top-1 -right-1 w-4 h-4 bg-amber-400 rounded-full border-2 border-white animate-pulse"></div>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-semibold text-gray-900">Dr. Johnson - Pediatrics</p>
                  <p class="text-sm text-gray-600 mt-0.5">Patient: Jane Smith</p>
                  <p class="text-xs text-gray-500 mt-1 flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    10:30 AM
                  </p>
                </div>
              </div>
              <div class="ml-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-amber-100 text-amber-800 border border-amber-200">
                  Waiting
                </span>
              </div>
            </div>
          </div>

          <div class="group relative bg-gradient-to-r from-green-50 to-emerald-50 rounded-lg p-4 border border-green-200 hover:shadow-md transition-all duration-200 cursor-pointer">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4 flex-1">
                <div class="relative">
                  <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center shadow-lg">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div class="absolute -top-1 -right-1 w-4 h-4 bg-green-400 rounded-full border-2 border-white"></div>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-semibold text-gray-900">Dr. Brown - General Practice</p>
                  <p class="text-sm text-gray-600 mt-0.5">Patient: Mike Wilson</p>
                  <p class="text-xs text-gray-500 mt-1 flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    11:15 AM
                  </p>
                </div>
              </div>
              <div class="ml-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800 border border-green-200">
                  In Progress
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Emergency Triage - Enhanced -->
    <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
      <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold text-gray-900">Emergency Triage</h3>
            <p class="text-sm text-gray-500 mt-1">3 active cases</p>
          </div>
          <button class="text-sm text-red-600 hover:text-red-700 font-medium">View All</button>
        </div>
      </div>
      <div class="p-6">
        <div class="space-y-4" id="triage-list">
          <div class="relative pl-4 border-l-4 border-red-500">
            <div class="absolute -left-2 top-0 w-4 h-4 bg-red-500 rounded-full border-2 border-white animate-pulse"></div>
            <div class="bg-red-50 rounded-lg p-4">
              <div class="flex items-start justify-between mb-2">
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                  </svg>
                  <span class="text-xs font-semibold text-red-800">Critical</span>
                </div>
                <span class="text-xs text-red-600">5m ago</span>
              </div>
              <p class="text-sm text-red-900 font-medium mb-1">Chest pain</p>
              <p class="text-sm text-red-700">Patient ID: 12345</p>
            </div>
          </div>

          <div class="relative pl-4 border-l-4 border-amber-500">
            <div class="absolute -left-2 top-0 w-4 h-4 bg-amber-500 rounded-full border-2 border-white"></div>
            <div class="bg-amber-50 rounded-lg p-4">
              <div class="flex items-start justify-between mb-2">
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                  </svg>
                  <span class="text-xs font-semibold text-amber-800">Urgent</span>
                </div>
                <span class="text-xs text-amber-600">15m ago</span>
              </div>
              <p class="text-sm text-amber-900 font-medium mb-1">Fever and headache</p>
              <p class="text-sm text-amber-700">Patient ID: 12346</p>
            </div>
          </div>

          <div class="relative pl-4 border-l-4 border-blue-500">
            <div class="absolute -left-2 top-0 w-4 h-4 bg-blue-500 rounded-full border-2 border-white"></div>
            <div class="bg-blue-50 rounded-lg p-4">
              <div class="flex items-start justify-between mb-2">
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-xs font-semibold text-blue-800">Non-Urgent</span>
                </div>
                <span class="text-xs text-blue-600">30m ago</span>
              </div>
              <p class="text-sm text-blue-900 font-medium mb-1">Minor injury</p>
              <p class="text-sm text-blue-700">Patient ID: 12347</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Healthcare Integrations - React Islands (Placeholder) -->
  <div class="mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">Healthcare Integrations</h2>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- <EpicWidget client:visible /> -->
      <div class="p-6 bg-white rounded-xl shadow-md text-center text-gray-500">Epic Widget loading...</div>
      <!-- <SalesforceWidget client:visible /> -->
      <div class="p-6 bg-white rounded-xl shadow-md text-center text-gray-500">Salesforce Widget loading...</div>
      <!-- <HubSpotWidget client:visible /> -->
      <div class="p-6 bg-white rounded-xl shadow-md text-center text-gray-500">HubSpot Widget loading...</div>
    </div>
  </div>

  <!-- Workflow Automation -->
  <div class="mb-8">
    <WorkflowAutomation industry="healthcare" />
  </div>

  <!-- Pricing Section -->
  <div class="mt-12">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-3">Choose Your Healthcare Plan</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Start with a 7-day free trial. No charges during trial period. Payment method required to begin.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <PricingCard 
        serviceType="healthcare" 
        tier="individual" 
        successUrl="/dashboards/healthcare?trial=success"
        cancelUrl="/dashboards/healthcare?trial=cancelled"
      />
      <PricingCard 
        serviceType="healthcare" 
        tier="small" 
        isPopular={true}
        successUrl="/dashboards/healthcare?trial=success"
        cancelUrl="/dashboards/healthcare?trial=cancelled"
      />
      <PricingCard 
        serviceType="healthcare" 
        tier="professional" 
        successUrl="/dashboards/healthcare?trial=success"
        cancelUrl="/dashboards/healthcare?trial=cancelled"
      />
      <PricingCard 
        serviceType="healthcare" 
        tier="enterprise" 
        showTrialButton={false}
        successUrl="/dashboards/healthcare?trial=success"
        cancelUrl="/dashboards/healthcare?trial=cancelled"
      />
    </div>

    <!-- Trial Information Banner -->
    <div class="mt-8 bg-gradient-to-r from-green-600 via-emerald-600 to-teal-600 rounded-xl p-6 border border-green-200 shadow-lg">
      <div class="flex items-start space-x-4">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center">
            <span class="text-2xl">ðŸŽ‰</span>
          </div>
        </div>
        <div class="flex-1">
          <h3 class="text-lg font-semibold text-white mb-2">7-Day Free Trial</h3>
          <p class="text-white/90 mb-3">
            Experience the full power of our healthcare communication platform at no cost. 
            No charges during your trial period.
          </p>
          <ul class="text-sm text-white/90 space-y-1.5">
            <li class="flex items-center">
              <svg class="w-4 h-4 mr-2 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Full access to all features during trial
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 mr-2 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              No setup fees or hidden costs
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 mr-2 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Cancel anytime during trial period
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 mr-2 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Payment method required to start (no charges until trial ends)
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>

<!-- Stripe Checkout Modal -->
<StripeCheckoutModal 
  priceId="price_healthcare_individual"
  serviceType="healthcare"
  planName="Individual Practice"
  basePrice={150}
  period="per provider/month"
  features={[
    "2,000 AI voice sessions/month",
    "Basic benefit verification",
    "Appointment scheduling",
    "Patient communication",
    "Basic EHR integration",
    "HIPAA compliance",
    "Email support"
  ]}
  trialDays={7}
  successUrl="/dashboards/healthcare?trial=success"
  cancelUrl="/dashboards/healthcare?trial=cancelled"
/>

<script>
  // Simple clock update (pure visual)
  (function() {
    function updateLastUpdateTime() {
      const element = document.getElementById('last-update-time');
      if (element) {
        const now = new Date();
        element.textContent = now.toLocaleTimeString('en-US', { 
          hour: '2-digit', 
          minute: '2-digit',
          second: '2-digit'
        });
      }
    }
    updateLastUpdateTime();
    setInterval(updateLastUpdateTime, 60000);
  })();
</script>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in { animation: fadeIn 0.3s ease-out; }
</style>
