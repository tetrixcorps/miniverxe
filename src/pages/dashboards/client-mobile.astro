          <!-- <EpicWidget client:visible /> -->
          <div class="p-4 bg-white rounded-lg shadow-sm text-center text-sm text-gray-500">Epic Widget loading...</div>
          <!-- <SalesforceWidget client:visible /> -->
          <div class="p-4 bg-white rounded-lg shadow-sm text-center text-sm text-gray-500">Salesforce Widget loading...</div>
          <!-- <HubSpotWidget client:visible /> -->
          <div class="p-4 bg-white rounded-lg shadow-sm text-center text-sm text-gray-500">HubSpot Widget loading...</div>
        </div>
