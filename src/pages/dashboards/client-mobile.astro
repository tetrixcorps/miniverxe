</div>

<script>
  // Mobile Dashboard functionality
  class MobileClientDashboard {
    currentIndustry: string;
    userRole: string;

    constructor() {
      this.currentIndustry = 'fleet';
      this.userRole = this.detectUserRole();
      this.init();
    }

    init() {
      this.setupEventListeners();
      this.updateUserRoleBadge();
    }

    detectUserRole(): string {
      const urlParams = new URLSearchParams(window.location.search);
      const role = urlParams.get('role') || localStorage.getItem('userRole') || 'fleet_manager';
      
      const roleMap: Record<string, string> = {
        'fleet_manager': 'Fleet Manager',
        'healthcare_provider': 'Healthcare Provider',
        'attorney': 'Attorney'
      };
      
      return roleMap[role] || 'Fleet Manager';
    }

    setupEventListeners() {
      // Tab switching
      document.querySelectorAll('.mobile-tab-button').forEach(button => {
        button.addEventListener('click', (e) => {
          const target = e.currentTarget as HTMLElement;
          const industry = target.dataset.industry;
          if (industry) {
          this.switchIndustry(industry);
          }
        });
      });

      // Menu button
      document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
        console.log('Mobile menu clicked');
      });
    }

    switchIndustry(industry: string) {
      // Update tab states
      document.querySelectorAll('.mobile-tab-button').forEach(button => {
        const btn = button as HTMLElement;
        btn.dataset.active = 'false';
        btn.classList.remove('text-blue-600', 'bg-white', 'shadow-sm');
        btn.classList.add('text-gray-500');
      });

      const activeButton = document.querySelector(`[data-industry="${industry}"]`) as HTMLElement;
      if (activeButton) {
      activeButton.dataset.active = 'true';
      activeButton.classList.add('text-blue-600', 'bg-white', 'shadow-sm');
      activeButton.classList.remove('text-gray-500');
      }

      // Show/hide content sections
      document.querySelectorAll('.mobile-industry-section').forEach(section => {
        const sectionEl = section as HTMLElement;
        sectionEl.style.display = 'none';
      });

      const contentSection = document.getElementById(`mobile-${industry}-content`) as HTMLElement;
      if (contentSection) {
        contentSection.style.display = 'block';
      }
      this.currentIndustry = industry;
    }

    updateUserRoleBadge() {
      const badge = document.getElementById('mobile-user-role-badge');
      if (badge) {
        badge.textContent = this.userRole;
      }
    }
  }

  // Initialize mobile dashboard when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new MobileClientDashboard();
  });
</script>

<style>
  .mobile-industry-section {
    display: none;
  }
  
  .mobile-industry-section[style*="display: block"] {
    animation: fadeIn 0.3s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
