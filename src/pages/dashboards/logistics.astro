---
// Logistics & Fleet Management Dashboard
// Real-time tracking, driver communication, delivery management

import PricingCard from '../../components/stripe/PricingCard.astro';
import StripeCheckoutModal from '../../components/stripe/StripeCheckoutModal.astro';
import DashboardCart from '../../components/dashboard/DashboardCart.astro';
import FleetContactManagement from '../../components/dashboard/FleetContactManagement.astro';
---

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <div class="flex items-center">
          <h1 class="text-2xl font-bold text-gray-900">Logistics & Fleet Dashboard</h1>
          <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            üöõ Logistics
          </span>
        </div>
        <div class="flex items-center space-x-4">
          <div class="flex items-center text-sm text-gray-500">
            <div class="w-2 h-2 bg-green-400 rounded-full mr-2"></div>
            System Online
          </div>
          <button 
            id="configure-services-btn" 
            class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors"
          >
            Configure Services
          </button>
          <button id="refresh-btn" class="p-2 text-gray-400 hover:text-gray-600 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Key Metrics -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
              <span class="text-blue-600 text-lg">üöõ</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Active Vehicles</p>
            <p class="text-2xl font-semibold text-gray-900">24</p>
          </div>
        </div>
      </div>
      
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
              <span class="text-green-600 text-lg">üì¶</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Deliveries Today</p>
            <p class="text-2xl font-semibold text-gray-900">156</p>
          </div>
        </div>
      </div>
      
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-yellow-100 rounded-lg flex items-center justify-center">
              <span class="text-yellow-600 text-lg">‚è±Ô∏è</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Avg Delivery Time</p>
            <p class="text-2xl font-semibold text-gray-900">2.3h</p>
          </div>
        </div>
      </div>
      
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center">
              <span class="text-red-600 text-lg">‚ö†Ô∏è</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Alerts</p>
            <p class="text-2xl font-semibold text-gray-900">5</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Fleet Management Section -->
    <div class="mb-8">
      <FleetContactManagement 
        industry="logistics" 
        customerId="customer_123" 
        showESIMIntegration={true}
      />
    </div>

    <!-- Real-time Tracking & Driver Communication -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Real-time Tracking -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Real-time Vehicle Tracking</h3>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div class="flex items-center justify-between p-4 bg-green-50 rounded-lg">
              <div class="flex items-center">
                <div class="w-3 h-3 bg-green-400 rounded-full mr-3"></div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Truck #001 - John Smith</p>
                  <p class="text-sm text-gray-500">En route to Downtown - 15 min ETA</p>
                </div>
              </div>
              <span class="text-sm text-green-600 font-medium">On Time</span>
            </div>
            
            <div class="flex items-center justify-between p-4 bg-yellow-50 rounded-lg">
              <div class="flex items-center">
                <div class="w-3 h-3 bg-yellow-400 rounded-full mr-3"></div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Truck #002 - Sarah Johnson</p>
                  <p class="text-sm text-gray-500">Traffic delay - 30 min behind</p>
                </div>
              </div>
              <span class="text-sm text-yellow-600 font-medium">Delayed</span>
            </div>
            
            <div class="flex items-center justify-between p-4 bg-blue-50 rounded-lg">
              <div class="flex items-center">
                <div class="w-3 h-3 bg-blue-400 rounded-full mr-3"></div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Truck #003 - Mike Davis</p>
                  <p class="text-sm text-gray-500">Loading at warehouse</p>
                </div>
              </div>
              <span class="text-sm text-blue-600 font-medium">Loading</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Driver Communication -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Driver Communication</h3>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div class="flex items-start p-4 bg-blue-50 rounded-lg">
              <div class="flex-shrink-0">
                <span class="text-blue-600 text-lg">üì±</span>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-blue-800">Route Update</p>
                <p class="text-sm text-blue-700">Truck #001: Route optimized, saving 15 minutes</p>
                <p class="text-xs text-blue-600 mt-1">5 minutes ago</p>
              </div>
            </div>
            
            <div class="flex items-start p-4 bg-yellow-50 rounded-lg">
              <div class="flex-shrink-0">
                <span class="text-yellow-600 text-lg">‚ö†Ô∏è</span>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-yellow-800">Traffic Alert</p>
                <p class="text-sm text-yellow-700">Heavy traffic on Highway 101, consider alternate route</p>
                <p class="text-xs text-yellow-600 mt-1">12 minutes ago</p>
              </div>
            </div>
            
            <div class="flex items-start p-4 bg-green-50 rounded-lg">
              <div class="flex-shrink-0">
                <span class="text-green-600 text-lg">‚úÖ</span>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-green-800">Delivery Complete</p>
                <p class="text-sm text-green-700">Package delivered successfully to customer</p>
                <p class="text-xs text-green-600 mt-1">25 minutes ago</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Delivery Management -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Delivery Management</h3>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-3xl font-bold text-green-600 mb-2">94%</div>
            <p class="text-sm text-gray-600">On-Time Delivery Rate</p>
            <div class="w-full bg-gray-200 rounded-full h-2 mt-2">
              <div class="bg-green-600 h-2 rounded-full" style="width: 94%"></div>
            </div>
          </div>
          
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600 mb-2">87%</div>
            <p class="text-sm text-gray-600">Customer Satisfaction</p>
            <div class="w-full bg-gray-200 rounded-full h-2 mt-2">
              <div class="bg-blue-600 h-2 rounded-full" style="width: 87%"></div>
            </div>
          </div>
          
          <div class="text-center">
            <div class="text-3xl font-bold text-orange-600 mb-2">12%</div>
            <p class="text-sm text-gray-600">Fuel Efficiency Improvement</p>
            <div class="w-full bg-gray-200 rounded-full h-2 mt-2">
              <div class="bg-orange-600 h-2 rounded-full" style="width: 12%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Fleet Performance -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Fleet Performance</h3>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                <span class="text-green-600 text-sm">üöõ</span>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-900">Truck #001 completed 8 deliveries today</p>
              <p class="text-xs text-gray-500">Driver: John Smith - Performance: Excellent</p>
            </div>
          </div>
          
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
                <span class="text-yellow-600 text-sm">‚õΩ</span>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-900">Fuel efficiency alert: Truck #003 needs maintenance</p>
              <p class="text-xs text-gray-500">Scheduled for service tomorrow</p>
            </div>
          </div>
          
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                <span class="text-blue-600 text-sm">üìä</span>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-900">Monthly performance report generated</p>
              <p class="text-xs text-gray-500">All metrics within target ranges</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Pricing Section -->
    <div class="mt-12">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Choose Your Fleet Management Plan</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Start with a 7-day free trial. No charges during trial period. Payment method required to begin.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <PricingCard 
          serviceType="logistics" 
          tier="individual" 
          successUrl="/dashboards/logistics?trial=success"
          cancelUrl="/dashboards/logistics?trial=cancelled"
        />
        <PricingCard 
          serviceType="logistics" 
          tier="small" 
          isPopular={true}
          successUrl="/dashboards/logistics?trial=success"
          cancelUrl="/dashboards/logistics?trial=cancelled"
        />
        <PricingCard 
          serviceType="logistics" 
          tier="professional" 
          successUrl="/dashboards/logistics?trial=success"
          cancelUrl="/dashboards/logistics?trial=cancelled"
        />
        <PricingCard 
          serviceType="logistics" 
          tier="enterprise" 
          showTrialButton={false}
          successUrl="/dashboards/logistics?trial=success"
          cancelUrl="/dashboards/logistics?trial=cancelled"
        />
      </div>

      <!-- Trial Information -->
      <div class="mt-8 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl p-6 border border-blue-200">
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
            <span class="text-2xl">üéâ</span>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">7-Day Free Trial</h3>
            <p class="text-gray-600 mb-3">
              Experience the full power of our fleet management platform at no cost. 
              No charges during your trial period.
            </p>
            <ul class="text-sm text-gray-600 space-y-1">
              <li>‚Ä¢ Full access to all features during trial</li>
              <li>‚Ä¢ No setup fees or hidden costs</li>
              <li>‚Ä¢ Cancel anytime during trial period</li>
              <li>‚Ä¢ Payment method required to start (no charges until trial ends)</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Dashboard Cart -->
<DashboardCart 
  industry="logistics" 
  customerId="customer_123" 
  showTrialOptions={true}
/>

<!-- Stripe Checkout Modal -->
<StripeCheckoutModal 
  priceId="price_logistics_individual"
  serviceType="logistics"
  planName="Individual Fleet"
  basePrice={150}
  period="per vehicle/month"
  features={[
    "2,000 AI voice sessions/month",
    "Real-time vehicle tracking",
    "Driver communication",
    "Delivery management",
    "Basic reporting",
    "Mobile app access",
    "Email support"
  ]}
  trialDays={7}
  successUrl="/dashboards/logistics?trial=success"
  cancelUrl="/dashboards/logistics?trial=cancelled"
/>

<script>
  // Auto-refresh functionality
  setInterval(() => {
    // Simulate data refresh
    console.log('Refreshing logistics dashboard data...');
  }, 30000);

  // Refresh button functionality
  document.getElementById('refresh-btn')?.addEventListener('click', () => {
    location.reload();
  });

  // Configure services button functionality
  document.getElementById('configure-services-btn')?.addEventListener('click', () => {
    if (window.openDashboardCart) {
      window.openDashboardCart();
    } else {
      console.error('Dashboard cart not available');
    }
  });
</script>
