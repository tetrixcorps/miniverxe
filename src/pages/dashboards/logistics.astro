    <!-- Fleet Performance -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Fleet Performance</h3>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                <span class="text-green-600 text-sm">üöõ</span>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-900">Truck #001 completed 8 deliveries today</p>
              <p class="text-xs text-gray-500">Driver: John Smith - Performance: Excellent</p>
            </div>
          </div>
          
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0">
