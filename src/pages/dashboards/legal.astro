---
// Legal Practice Dashboard - Enterprise Grade
// Case management, client communication, billing
// Refactored with modern UI/UX best practices and React Islands

import DashboardLayout from '../../components/dashboards/DashboardLayout.astro';
import { DashboardMetrics } from '../../components/dashboard/react/DashboardMetrics';
import { SalesforceWidget } from '../../components/dashboard/react/SalesforceWidget';
import { HubSpotWidget } from '../../components/dashboard/react/HubSpotWidget';

// Server-Side Logic: Fetch User Session
const cookie = Astro.request.headers.get('cookie');
const hasSession = cookie?.includes('tetrix_access_token') || cookie?.includes('better-auth.session_token');

if (!hasSession) {
  return Astro.redirect('/login?redirect=/dashboards/legal');
}
---

<DashboardLayout title="Legal Practice Dashboard" industry="legal">
  <!-- Hero Section with Key Metrics -->
  <div class="mb-8">
    <!-- Status Bar -->
    <div class="bg-gradient-to-r from-purple-600 to-indigo-600 rounded-xl shadow-lg mb-6 p-6 text-white">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
            <span class="text-sm font-medium">System Online</span>
          </div>
          <div class="h-4 w-px bg-white/30"></div>
          <span class="text-sm">Last updated: <span id="last-update-time" class="font-semibold">Just now</span></span>
        </div>
        <div class="flex items-center space-x-3">
          <button 
            onclick="window.location.reload()"
            class="bg-white/20 backdrop-blur-sm text-white p-2 rounded-lg hover:bg-white/30 transition-all duration-200 border border-white/30"
            aria-label="Refresh data"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Key Metrics Cards - React Island -->
    <DashboardMetrics industry="legal" client:load />
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Active Cases - Enhanced -->
    <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
      <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold text-gray-900">Active Cases</h3>
            <p class="text-sm text-gray-500 mt-1">24 cases in progress</p>
          </div>
          <button class="text-sm text-blue-600 hover:text-blue-700 font-medium">View All</button>
        </div>
      </div>
      <div class="p-6">
        <div class="space-y-3" id="active-cases-list">
          <div class="group relative bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-4 border border-blue-200 hover:shadow-md transition-all duration-200 cursor-pointer">
            <div class="flex items-center justify-between">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-semibold text-gray-900">Smith vs. Corporation</p>
                <p class="text-sm text-gray-600 mt-0.5">Personal Injury</p>
                <p class="text-xs text-gray-500 mt-1">Settlement: $50,000</p>
              </div>
              <div class="ml-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-800 border border-blue-200">
                  Active
                </span>
              </div>
            </div>
          </div>

          <div class="group relative bg-gradient-to-r from-green-50 to-emerald-50 rounded-lg p-4 border border-green-200 hover:shadow-md transition-all duration-200 cursor-pointer">
            <div class="flex items-center justify-between">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-semibold text-gray-900">Johnson Estate</p>
                <p class="text-sm text-gray-600 mt-0.5">Estate Planning</p>
                <p class="text-xs text-gray-500 mt-1">Estate Value: $2.5M</p>
              </div>
              <div class="ml-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800 border border-green-200">
                  In Progress
                </span>
              </div>
            </div>
          </div>

          <div class="group relative bg-gradient-to-r from-amber-50 to-yellow-50 rounded-lg p-4 border border-amber-200 hover:shadow-md transition-all duration-200 cursor-pointer">
            <div class="flex items-center justify-between">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-semibold text-gray-900">ABC Corp Contract</p>
                <p class="text-sm text-gray-600 mt-0.5">Business Law</p>
                <p class="text-xs text-gray-500 mt-1">Monthly Retainer: $15,000</p>
              </div>
              <div class="ml-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-amber-100 text-amber-800 border border-amber-200">
                  Ongoing
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Upcoming Deadlines - Enhanced -->
    <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
      <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold text-gray-900">Upcoming Deadlines</h3>
            <p class="text-sm text-gray-500 mt-1">3 deadlines approaching</p>
          </div>
          <button class="text-sm text-red-600 hover:text-red-700 font-medium">View All</button>
        </div>
      </div>
      <div class="p-6">
        <div class="space-y-4" id="deadlines-list">
          <div class="relative pl-4 border-l-4 border-red-500">
            <div class="absolute -left-2 top-0 w-4 h-4 bg-red-500 rounded-full border-2 border-white animate-pulse"></div>
            <div class="bg-red-50 rounded-lg p-4">
              <div class="flex items-start justify-between mb-2">
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-xs font-semibold text-red-800">Urgent</span>
                </div>
                <span class="text-xs text-red-600">Tomorrow</span>
              </div>
              <p class="text-sm text-red-900 font-medium mb-1">Motion to Dismiss - Smith Case</p>
              <p class="text-sm text-red-700">Due: Tomorrow, 5:00 PM</p>
            </div>
          </div>

          <div class="relative pl-4 border-l-4 border-amber-500">
            <div class="absolute -left-2 top-0 w-4 h-4 bg-amber-500 rounded-full border-2 border-white"></div>
            <div class="bg-amber-50 rounded-lg p-4">
              <div class="flex items-start justify-between mb-2">
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-xs font-semibold text-amber-800">Upcoming</span>
                </div>
                <span class="text-xs text-amber-600">Friday</span>
              </div>
              <p class="text-sm text-amber-900 font-medium mb-1">Discovery Response - Johnson Estate</p>
              <p class="text-sm text-amber-700">Due: Friday, 12:00 PM</p>
            </div>
          </div>

          <div class="relative pl-4 border-l-4 border-blue-500">
            <div class="absolute -left-2 top-0 w-4 h-4 bg-blue-500 rounded-full border-2 border-white"></div>
            <div class="bg-blue-50 rounded-lg p-4">
              <div class="flex items-start justify-between mb-2">
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-xs font-semibold text-blue-800">Scheduled</span>
                </div>
                <span class="text-xs text-blue-600">Next Monday</span>
              </div>
              <p class="text-sm text-blue-900 font-medium mb-1">Contract Review - ABC Corp</p>
              <p class="text-sm text-blue-700">Due: Next Monday</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Client Communication -->
  <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden mb-8">
    <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
      <h3 class="text-lg font-semibold text-gray-900">Client Communication</h3>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="mb-3">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-2">
              <span class="text-2xl font-bold text-blue-600">89%</span>
            </div>
          </div>
          <p class="text-sm font-medium text-gray-700 mb-2">Response Rate</p>
          <div class="w-full bg-gray-200 rounded-full h-2.5 overflow-hidden">
            <div class="bg-gradient-to-r from-blue-500 to-indigo-600 h-2.5 rounded-full transition-all duration-500" style="width: 89%"></div>
          </div>
          <p class="text-xs text-gray-500 mt-2">+3% vs last month</p>
        </div>

        <div class="text-center">
          <div class="mb-3">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-2">
              <span class="text-2xl font-bold text-green-600">24</span>
            </div>
          </div>
          <p class="text-sm font-medium text-gray-700 mb-2">Client Calls Today</p>
          <div class="w-full bg-gray-200 rounded-full h-2.5 overflow-hidden">
            <div class="bg-gradient-to-r from-green-500 to-emerald-600 h-2.5 rounded-full transition-all duration-500" style="width: 75%"></div>
          </div>
          <p class="text-xs text-gray-500 mt-2">All completed</p>
        </div>

        <div class="text-center">
          <div class="mb-3">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-purple-100 rounded-full mb-2">
              <span class="text-2xl font-bold text-purple-600">156</span>
            </div>
          </div>
          <p class="text-sm font-medium text-gray-700 mb-2">Emails Sent</p>
          <div class="w-full bg-gray-200 rounded-full h-2.5 overflow-hidden">
            <div class="bg-gradient-to-r from-purple-500 to-indigo-600 h-2.5 rounded-full transition-all duration-500" style="width: 60%"></div>
          </div>
          <p class="text-xs text-gray-500 mt-2">This month</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden mb-8">
    <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
      <h3 class="text-lg font-semibold text-gray-900">Recent Activity</h3>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <div class="flex items-center space-x-4 p-3 bg-gradient-to-r from-green-50 to-emerald-50 rounded-lg border border-green-100">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center shadow-md">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-semibold text-gray-900">Case closed: Smith vs. Corporation - Settlement reached</p>
            <p class="text-xs text-gray-600 mt-0.5">$50,000 settlement - 2 hours ago</p>
          </div>
        </div>

        <div class="flex items-center space-x-4 p-3 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg border border-blue-100">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center shadow-md">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-semibold text-gray-900">Client call completed: Johnson Estate consultation</p>
            <p class="text-xs text-gray-600 mt-0.5">45 minutes - 1 hour ago</p>
          </div>
        </div>

        <div class="flex items-center space-x-4 p-3 bg-gradient-to-r from-amber-50 to-yellow-50 rounded-lg border border-amber-100">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-amber-500 rounded-lg flex items-center justify-center shadow-md">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-semibold text-gray-900">Document filed: Motion to Dismiss - ABC Corp</p>
            <p class="text-xs text-gray-600 mt-0.5">Case ID: 2024-001 - 3 hours ago</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- CRM Integrations - React Islands -->
  <div class="mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">CRM Integrations</h2>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <SalesforceWidget client:visible />
      <HubSpotWidget client:visible />
    </div>
  </div>
</DashboardLayout>

<script>
  // Simple clock update
  (function() {
    function updateLastUpdateTime() {
      const element = document.getElementById('last-update-time');
      if (element) {
        const now = new Date();
        element.textContent = now.toLocaleTimeString('en-US', { 
          hour: '2-digit', 
          minute: '2-digit',
          second: '2-digit'
        });
      }
    }
    updateLastUpdateTime();
    setInterval(updateLastUpdateTime, 60000);
  })();
</script>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in { animation: fadeIn 0.3s ease-out; }
</style>
