<script>
  // Global modal functionality
  function openModal(modalId: string) {
    const modal = document.getElementById(modalId);
    if (modal) {
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }
  }

  function closeModal(modalId: string) {
    const modal = document.getElementById(modalId);
    if (modal) {
      modal.classList.add('hidden');
      document.body.style.overflow = 'auto';
    }
  }

  // Make functions globally available
  (window as any).openModal = openModal;
  (window as any).closeModal = closeModal;

  // Handle JoRoMi authentication parameter
  document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const authParam = urlParams.get('auth');
    
    if (authParam === 'joromi') {
      // Check if user is already authenticated
      const authToken = localStorage.getItem('tetrix_auth_token');
      
      if (authToken) {
        // User is authenticated, redirect to JoRoMi auth handler
        window.location.href = '/joromi-auth?redirect=joromi-dashboard';
      } else {
        // User needs to authenticate first, show 2FA modal
        if (window.open2FAModal) {
          // Set authentication context for JoRoMi
          window.tetrixAuthContext = 'joromi';
          window.open2FAModal();
        }
      }
    }
  });

  // SHANGO AI Expert Chat Integration
  document.addEventListener('DOMContentLoaded', function() {
    const talkToExpertBtn = document.getElementById('talk-to-expert-btn');
    
    if (talkToExpertBtn) {
      talkToExpertBtn.addEventListener('click', function() {
        // Redirect to contact page with SHANGO chat widget
        window.location.href = '/contact#shango-chat';
      });
    }
  });
</script>

