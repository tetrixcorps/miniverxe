---
import MainLayout from '../components/layout/MainLayout.astro';
import UnifiedOnboardingFlow from '../components/UnifiedOnboardingFlow.tsx';
import UnifiedMessagingDashboard from '../components/UnifiedMessagingDashboard.tsx';
---

<MainLayout>
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <!-- Hero Section -->
    <section class="py-20 px-4">
      <div class="max-w-7xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
          Cross-Platform
          <span class="text-blue-600">Management System</span>
        </h1>
        <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
          Unified messaging, voice, and AI services across TETRIX and JoRoMi platforms. 
          Seamlessly manage WhatsApp, SMS, Voice calls, and AI-powered conversations.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/onboarding" class="bg-blue-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
            Start Free Trial
          </a>
          <a href="#features" class="bg-white text-blue-600 px-8 py-4 rounded-lg font-semibold border-2 border-blue-600 hover:bg-blue-50 transition-colors">
            View Features
          </a>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-20 px-4 bg-white">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-4xl font-bold text-center text-gray-900 mb-16">
          Unified Platform Features
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Voice API -->
          <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-8 rounded-xl shadow-lg">
            <div class="w-16 h-16 bg-blue-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Voice API</h3>
            <p class="text-gray-600 mb-4">
              Enhanced Telnyx integration with Deepgram STT for intelligent voice processing and AI responses.
            </p>
            <a href="/voice-demo-simple" class="text-blue-600 font-semibold hover:text-blue-700">
              Try Voice Demo →
            </a>
          </div>

          <!-- Smart 2FA -->
          <div class="bg-gradient-to-br from-green-50 to-green-100 p-8 rounded-xl shadow-lg">
            <div class="w-16 h-16 bg-green-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Smart 2FA</h3>
            <p class="text-gray-600 mb-4">
              Enterprise-grade authentication with voice primary, SMS fallback, and fraud detection.
            </p>
            <a href="/api/v2/2fa/initiate" class="text-green-600 font-semibold hover:text-green-700">
              Test 2FA API →
            </a>
          </div>

          <!-- Unified Messaging -->
          <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-8 rounded-xl shadow-lg">
            <div class="w-16 h-16 bg-purple-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Unified Messaging</h3>
            <p class="text-gray-600 mb-4">
              WhatsApp, SMS, Voice, and Chat integration with cross-platform session management.
            </p>
            <a href="/onboarding" class="text-purple-600 font-semibold hover:text-purple-700">
              Setup Messaging →
            </a>
          </div>

          <!-- SHANGO AI Agent -->
          <div class="bg-gradient-to-br from-orange-50 to-orange-100 p-8 rounded-xl shadow-lg">
            <div class="w-16 h-16 bg-orange-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">SHANGO AI Agent</h3>
            <p class="text-gray-600 mb-4">
              Your AI Super Agent for technical support, sales, billing, and general assistance.
            </p>
            <a href="/onboarding" class="text-orange-600 font-semibold hover:text-orange-700">
              Meet SHANGO →
            </a>
          </div>

          <!-- Cross-Platform Sessions -->
          <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 p-8 rounded-xl shadow-lg">
            <div class="w-16 h-16 bg-indigo-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Cross-Platform Sessions</h3>
            <p class="text-gray-600 mb-4">
              Seamless session management between TETRIX and JoRoMi platforms with secure tokens.
            </p>
            <a href="/onboarding" class="text-indigo-600 font-semibold hover:text-indigo-700">
              Learn More →
            </a>
          </div>

          <!-- Real-time Webhooks -->
          <div class="bg-gradient-to-br from-red-50 to-red-100 p-8 rounded-xl shadow-lg">
            <div class="w-16 h-16 bg-red-600 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Real-time Webhooks</h3>
            <p class="text-gray-600 mb-4">
              Live event processing for 2FA, payments, messaging, and voice call events.
            </p>
            <a href="/api/webhooks" class="text-red-600 font-semibold hover:text-red-700">
              View Webhooks →
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Platform Status Section -->
    <section class="py-20 px-4 bg-gray-50">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-4xl font-bold text-center text-gray-900 mb-16">
          Platform Status
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          <!-- TETRIX Platform -->
          <div class="bg-white p-8 rounded-xl shadow-lg">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mr-4">
                <span class="text-white font-bold text-xl">T</span>
              </div>
              <div>
                <h3 class="text-2xl font-bold text-gray-900">TETRIX Platform</h3>
                <p class="text-green-600 font-semibold">● Online</p>
              </div>
            </div>
            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span class="text-gray-600">Voice API</span>
                <span class="text-green-600 font-semibold">Operational</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600">2FA System</span>
                <span class="text-green-600 font-semibold">Operational</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600">Messaging</span>
                <span class="text-green-600 font-semibold">Operational</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600">AI Agent</span>
                <span class="text-yellow-600 font-semibold">Limited</span>
              </div>
            </div>
            <a href="http://localhost:4325" target="_blank" class="mt-6 inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
              Visit TETRIX →
            </a>
          </div>

          <!-- JoRoMi Platform -->
          <div class="bg-white p-8 rounded-xl shadow-lg">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-purple-600 rounded-lg flex items-center justify-center mr-4">
                <span class="text-white font-bold text-xl">J</span>
              </div>
              <div>
                <h3 class="text-2xl font-bold text-gray-900">JoRoMi Platform</h3>
                <p class="text-green-600 font-semibold">● Online</p>
              </div>
            </div>
            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span class="text-gray-600">Frontend</span>
                <span class="text-green-600 font-semibold">Operational</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600">Backend</span>
                <span class="text-yellow-600 font-semibold">Configuring</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600">VoIP Interface</span>
                <span class="text-green-600 font-semibold">Operational</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600">Integration</span>
                <span class="text-green-600 font-semibold">Ready</span>
              </div>
            </div>
            <a href="http://localhost:3000" target="_blank" class="mt-6 inline-block bg-purple-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-purple-700 transition-colors">
              Visit JoRoMi →
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Actions Section -->
    <section class="py-20 px-4 bg-white">
      <div class="max-w-7xl mx-auto text-center">
        <h2 class="text-4xl font-bold text-gray-900 mb-8">
          Quick Actions
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          <a href="/onboarding" class="bg-gradient-to-r from-blue-600 to-blue-700 text-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all">
            <div class="text-4xl mb-4">🚀</div>
            <h3 class="text-2xl font-bold mb-4">Start Free Trial</h3>
            <p class="text-blue-100">Begin your 7-day free trial with WhatsApp Business integration</p>
          </a>
          
          <a href="/voice-demo-simple" class="bg-gradient-to-r from-green-600 to-green-700 text-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all">
            <div class="text-4xl mb-4">🎤</div>
            <h3 class="text-2xl font-bold mb-4">Test Voice API</h3>
            <p class="text-green-100">Try our enhanced voice API with Deepgram STT integration</p>
          </a>
          
          <a href="/api/voice/health" class="bg-gradient-to-r from-purple-600 to-purple-700 text-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all">
            <div class="text-4xl mb-4">🔧</div>
            <h3 class="text-2xl font-bold mb-4">API Health</h3>
            <p class="text-purple-100">Check the status of all our API endpoints and services</p>
          </a>
        </div>
      </div>
    </section>
  </div>
</MainLayout>

<style>
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: .5;
    }
  }
</style>