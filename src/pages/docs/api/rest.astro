---
import MainLayout from '../../../components/layout/MainLayout.astro';
import DocSidebar from '../../../components/features/DocSidebar.astro';
import ApiReference from '../../../components/features/ApiReference.astro';

// Sample API endpoints
const apiEndpoints = [
  {
    method: 'GET',
    path: '/api/v1/clients',
    description: 'Retrieve a list of all clients in your workspace',
    parameters: [
      {
        name: 'page',
        type: 'integer',
        required: false,
        description: 'Page number for pagination',
        example: '1'
      },
      {
        name: 'limit',
        type: 'integer',
        required: false,
        description: 'Number of items per page',
        example: '20'
      },
      {
        name: 'status',
        type: 'string',
        required: false,
        description: 'Filter by client status',
        example: 'active'
      }
    ],
    responses: [
      {
        code: 200,
        description: 'Success',
        example: `{
  "success": true,
  "data": {
    "clients": [
      {
        "id": "cl_123456789",
        "name": "Acme Corporation",
        "email": "contact@acme.com",
        "status": "active",
        "created_at": "2024-01-15T10:30:00Z"
      }
    ],
    "pagination": {
      "page": 1,
      "limit": 20,
      "total": 1
    }
  }
}`
      },
      {
        code: 401,
        description: 'Unauthorized',
        example: `{
  "success": false,
  "error": {
    "code": "unauthorized",
    "message": "Invalid API key"
  }
}`
      }
    ],
    tags: ['clients', 'list']
  },
  {
    method: 'POST',
    path: '/api/v1/clients',
    description: 'Create a new client in your workspace',
    requestBody: {
      type: 'application/json',
      description: 'Client information',
      example: `{
  "name": "New Client Corp",
  "email": "contact@newclient.com",
  "phone": "+1-555-0123",
  "address": {
    "street": "123 Business St",
    "city": "New York",
    "state": "NY",
    "zip": "10001"
  }
}`
    },
    responses: [
      {
        code: 201,
        description: 'Client created successfully',
        example: `{
  "success": true,
  "data": {
    "client": {
      "id": "cl_987654321",
      "name": "New Client Corp",
      "email": "contact@newclient.com",
      "status": "active",
      "created_at": "2024-01-15T10:30:00Z"
    }
  }
}`
      },
      {
        code: 400,
        description: 'Bad Request',
        example: `{
  "success": false,
  "error": {
    "code": "validation_error",
    "message": "Email is required"
  }
}`
      }
    ],
    tags: ['clients', 'create']
  },
  {
    method: 'GET',
    path: '/api/v1/clients/{client_id}',
    description: 'Retrieve a specific client by ID',
    parameters: [
      {
        name: 'client_id',
        type: 'string',
        required: true,
        description: 'The unique identifier of the client',
        example: 'cl_123456789'
      }
    ],
    responses: [
      {
        code: 200,
        description: 'Success',
        example: `{
  "success": true,
  "data": {
    "client": {
      "id": "cl_123456789",
      "name": "Acme Corporation",
      "email": "contact@acme.com",
      "phone": "+1-555-0123",
      "status": "active",
      "address": {
        "street": "123 Business St",
        "city": "New York",
        "state": "NY",
        "zip": "10001"
      },
      "created_at": "2024-01-15T10:30:00Z",
      "updated_at": "2024-01-15T10:30:00Z"
    }
  }
}`
      },
      {
        code: 404,
        description: 'Client not found',
        example: `{
  "success": false,
  "error": {
    "code": "not_found",
    "message": "Client not found"
  }
}`
      }
    ],
    tags: ['clients', 'retrieve']
  }
];

const docSections = [
  {
    title: "Getting Started",
    url: "/docs/getting-started",
    children: [
      { title: "Quick Start Guide", url: "/docs/getting-started/quick-start" },
      { title: "Installation", url: "/docs/getting-started/installation" },
      { title: "First Project", url: "/docs/getting-started/first-project" }
    ]
  },
  {
    title: "Core Concepts",
    url: "/docs/concepts",
    children: [
      { title: "Architecture Overview", url: "/docs/concepts/architecture" },
      { title: "Data Models", url: "/docs/concepts/data-models" },
      { title: "Authentication", url: "/docs/concepts/authentication" }
    ]
  },
  {
    title: "API Reference",
    url: "/docs/api",
    children: [
      { title: "REST API", url: "/docs/api/rest" },
      { title: "Webhooks", url: "/docs/api/webhooks" },
      { title: "SDKs", url: "/docs/api/sdks" }
    ]
  },
  {
    title: "Guides",
    url: "/docs/guides",
    children: [
      { title: "Client Management", url: "/docs/guides/client-management" },
      { title: "Project Setup", url: "/docs/guides/project-setup" },
      { title: "Team Collaboration", url: "/docs/guides/team-collaboration" }
    ]
  },
  {
    title: "Troubleshooting",
    url: "/docs/troubleshooting",
    children: [
      { title: "Common Issues", url: "/docs/troubleshooting/common-issues" },
      { title: "Error Codes", url: "/docs/troubleshooting/error-codes" },
      { title: "Performance", url: "/docs/troubleshooting/performance" }
    ]
  }
];

// Generate HTML for API endpoints (replace with real component rendering if needed)
let apiEndpointsBlock = '';
if (Array.isArray(apiEndpoints)) {
  apiEndpointsBlock = apiEndpoints.map(endpoint =>
    `<div class='mb-8 p-4 border rounded-lg bg-gray-50'><strong>${endpoint.method}</strong> <code>${endpoint.path}</code><br>${endpoint.description}</div>`
  ).join('');
}
