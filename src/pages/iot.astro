                  <span class="text-green-400 font-mono">GET /devices</span>
                  <span class="text-gray-400">List all devices</span>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-800 rounded-lg">
                  <span class="text-blue-400 font-mono">POST /devices</span>
                  <span class="text-gray-400">Register new device</span>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-800 rounded-lg">
                  <span class="text-yellow-400 font-mono">PUT /devices/{id}</span>
                  <span class="text-gray-400">Update device</span>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-800 rounded-lg">
                  <span class="text-red-400 font-mono">DELETE /devices/{id}</span>
                  <span class="text-gray-400">Remove device</span>
                </div>
              </div>
            </div>
            
            <div>
              <h3 class="text-2xl font-bold mb-6 text-green-400">Telemetry Data</h3>
              <div class="space-y-4">
                <div class="flex items-center justify-between p-4 bg-gray-800 rounded-lg">
                  <span class="text-green-400 font-mono">GET /telemetry</span>
                  <span class="text-gray-400">Get telemetry data</span>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-800 rounded-lg">
                  <span class="text-blue-400 font-mono">POST /telemetry</span>
                  <span class="text-gray-400">Send telemetry data</span>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-800 rounded-lg">
                  <span class="text-purple-400 font-mono">GET /analytics</span>
                  <span class="text-gray-400">Get analytics data</span>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-800 rounded-lg">
                  <span class="text-orange-400 font-mono">GET /alerts</span>
                  <span class="text-gray-400">Get alert notifications</span>
