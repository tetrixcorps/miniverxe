  <script>
    // Dashboard functionality
    document.addEventListener('DOMContentLoaded', function() {
      // Check if user is authenticated
      const authToken = localStorage.getItem('tetrix_auth_token');
      if (!authToken) {
        // Redirect to home if not authenticated
        window.location.href = '/';
        return;
      }

      // Logout functionality
      const logoutBtn = document.getElementById('logout-btn');
      if (logoutBtn) {
        logoutBtn.addEventListener('click', function() {
          // Clear authentication token
          localStorage.removeItem('tetrix_auth_token');
          // Redirect to home
          window.location.href = '/';
        });
      }

      // Quick action buttons
      const quickActions = document.querySelectorAll('.space-y-3 button');
      quickActions.forEach(button => {
        button.addEventListener('click', function() {
          const actionText = this.querySelector('span:last-child').textContent;
          
          switch (actionText) {
            case 'Test Voice API':
              alert('Voice API test functionality would be implemented here');
              break;
            case 'Send Test Message':
              alert('Test message functionality would be implemented here');
              break;
            case '2FA Settings':
              alert('2FA settings would be opened here');
              break;
            case 'JoRoMi Platform':
              window.open('http://localhost:3000', '_blank');
              break;
            default:
              console.log('Action clicked:', actionText);
          }
        });
      });
    });
  </script>
