        // Initialize Code Academy functionality
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Code Academy page loaded successfully!');
            
            // Button event listeners
            const startLearningBtn = document.getElementById('start-learning-btn');
            const getStartedBtn = document.getElementById('get-started-btn');
            const viewCoursesBtn = document.getElementById('view-courses-btn');
            const tryAiBtn = document.getElementById('try-ai-btn');
            const startSessionBtn = document.getElementById('start-session-btn');
            const enrollNowBtn = document.getElementById('enroll-now-btn');
            const scheduleDemoBtn = document.getElementById('schedule-demo-btn');

            // Start learning session with SinchChatLive
            function startLearningSession() {
                console.log('Starting learning session...');
                
                // Create a session with SHANGO AI
                fetch('/api/v1/shango/sessions', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        userId: 'code-academy-user-' + Date.now(),
                        agentId: 'shango-technical'
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        console.log('Learning session started:', data.session);
                        alert('Welcome to Code Academy! Your AI learning session has started. You can now ask questions and get personalized help.');
                        
                        // Open a modal or redirect to learning interface
                        // For now, we'll show an alert
                        showLearningInterface(data.session);
                    } else {
                        console.error('Failed to start learning session:', data);
                        alert('Failed to start learning session. Please try again.');
                    }
                })
                .catch(error => {
                    console.error('Error starting learning session:', error);
                    alert('Error starting learning session. Please try again.');
                });
            }

            // Show learning interface (placeholder)
            function showLearningInterface(session) {
                // This would open a modal or redirect to the learning interface
                console.log('Learning interface for session:', session.id);
                
                // For demo purposes, show a simple interface
                const demo = document.getElementById('ai-chat-demo');
                if (demo) {
                    demo.innerHTML = `
                        <div class="space-y-4">
                            <div class="flex justify-start">
                                <div class="bg-white border p-3 rounded-lg max-w-2xl">
                                    <div class="flex items-center mb-2">
                                        <div class="w-6 h-6 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white text-xs font-bold mr-2">
                                            ‚ö°
                                        </div>
                                        <span class="text-sm font-semibold text-gray-700">SHANGO AI</span>
                                    </div>
                                    <p class="text-gray-800">
                                        Welcome to Code Academy! I'm your AI coding assistant. 
                                        I can help you with programming questions, code analysis, 
                                        and personalized learning recommendations. What would you like to learn today?
                                    </p>
                                </div>
                            </div>
                        </div>
                    `;
                }
            }

            // Add event listeners
            if (startLearningBtn) {
                startLearningBtn.addEventListener('click', startLearningSession);
            }
            
            if (getStartedBtn) {
                getStartedBtn.addEventListener('click', startLearningSession);
            }
            
            if (tryAiBtn) {
                tryAiBtn.addEventListener('click', startLearningSession);
            }
            
            if (startSessionBtn) {
                startSessionBtn.addEventListener('click', startLearningSession);
            }
            
            if (enrollNowBtn) {
                enrollNowBtn.addEventListener('click', startLearningSession);
            }

