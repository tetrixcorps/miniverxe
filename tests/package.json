{
  "name": "tetrix-dual-invoice-delivery-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for TETRIX dual invoice delivery system",
  "scripts": {
    "test": "ts-node tests/runTests.ts",
    "test:unit": "ts-node tests/runTests.ts unit",
    "test:functional": "ts-node tests/runTests.ts functional",
    "test:integration": "ts-node tests/runTests.ts integration",
    "test:coverage": "ts-node tests/runTests.ts coverage",
    "test:watch": "ts-node tests/runTests.ts watch",
    "test:jest": "jest --config=tests/jest.config.js",
    "test:jest:unit": "jest tests/unit --config=tests/jest.config.js",
    "test:jest:functional": "jest tests/functional --config=tests/jest.config.js",
    "test:jest:integration": "jest tests/integration --config=tests/jest.config.js",
    "test:jest:coverage": "jest --config=tests/jest.config.js --coverage",
    "test:jest:watch": "jest --config=tests/jest.config.js --watch",
    "test:ci": "jest --config=tests/jest.config.js --ci --coverage --watchAll=false"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"]
  }
}