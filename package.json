{
  "name": "tetrix-auth-system",
  "version": "1.0.0",
  "description": "Enterprise authentication system with 2FA integration",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:auth": "vitest run src/components/auth/__tests__",
    "test:services": "vitest run src/services/__tests__",
    "test:api": "vitest run src/pages/api/v2/2fa/__tests__",
    "test:integration": "vitest run src/components/auth/__tests__/auth-integration.test.ts",
    "dev": "astro dev",
    "build": "rm -rf dist && rm -rf .astro && astro build",
    "preview": "astro preview",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@astrojs/check": "^0.3.4",
    "@astrojs/node": "^9.0.0",
    "@astrojs/react": "^3.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "@astrojs/vercel": "^5.0.0",
    "@types/node": "^20.10.0",
    "astro": "^5.0.0",
    "axios": "^1.6.0",
    "firebase": "^11.0.0",
    "express": "^4.18.2",
    "mailgun-js": "^0.22.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stripe": "^14.0.0",
    "jsonwebtoken": "^9.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/mailgun-js": "^0.22.18",
    "playwright": "^1.40.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^6.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-astro": "^0.28.0",
    "jsdom": "^23.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}