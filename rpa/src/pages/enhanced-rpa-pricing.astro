  <script>
    // Enhanced RPA Pricing JavaScript
    class EnhancedRPAPricing {
      constructor() {
        this.currentIndustry = null;
        this.pricingService = null;
        this.axiomService = null;
        this.initializePricing();
      }

      async initializePricing() {
        console.log('üí∞ Initializing TETRIX Enhanced RPA Pricing...');
        
        // Initialize pricing service
        this.pricingService = new TETRIXRPAPricingService();
        this.axiomService = new TETRIXAxiomIntegrationService('your-axiom-api-key');
        
        // Setup event listeners
        this.setupEventListeners();
        
        console.log('‚úÖ Enhanced RPA Pricing initialized successfully');
      }

      setupEventListeners() {
        // Industry tab selection
        document.querySelectorAll('.industry-pricing-tab').forEach(tab => {
          tab.addEventListener('click', (e) => {
            const industry = e.currentTarget.dataset.industry;
            this.selectIndustry(industry);
          });
        });
      }

      async selectIndustry(industry) {
        console.log(`üè≠ Selecting industry: ${industry}`);
        
        // Update UI
        document.querySelectorAll('.industry-pricing-tab').forEach(tab => {
          tab.classList.remove('border-blue-500', 'bg-blue-50');
          tab.classList.add('border-gray-200');
        });
        
        document.querySelector(`[data-industry="${industry}"]`).classList.add('border-blue-500', 'bg-blue-50');
        document.querySelector(`[data-industry="${industry}"]`).classList.remove('border-gray-200');
        
        this.currentIndustry = industry;
        
        // Show industry content
        const industryContent = document.getElementById('industry-pricing-content');
        industryContent.classList.remove('hidden');
        
        // Load industry-specific pricing
        await this.loadIndustryPricing(industry);
      }

      async loadIndustryPricing(industry) {
        try {
          const pricingData = this.pricingService.getIndustryPricing(industry);
          console.log(`üí∞ Loaded pricing data for ${industry}:`, pricingData);
          
          // Update pricing with industry-specific rates
          this.updatePricingTiers(pricingData);
          
        } catch (error) {
          console.error(`‚ùå Failed to load pricing for ${industry}:`, error);
        }
      }

      updatePricingTiers(pricingData) {
        if (!pricingData) return;
        
        // Update pricing tiers with industry-specific pricing
        const tiers = pricingData.basePricing;
        
        tiers.forEach((tier, index) => {
          const tierElement = document.querySelectorAll('.bg-white.p-8.rounded-lg.shadow-sm.border')[index];
          if (tierElement) {
            const priceElement = tierElement.querySelector('.text-4xl.font-bold.text-blue-600');
            if (priceElement) {
              // Add browser automation premium
              const browserPremium = this.getBrowserAutomationPremium(industry);
              const enhancedPrice = tier.monthlyCost + browserPremium;
              priceElement.textContent = `$${enhancedPrice}`;
            }
          }
        });
      }

      getBrowserAutomationPremium(industry) {
        const premiums = {
          'healthcare': 200,
          'financial': 300,
          'legal': 250,
          'government': 400,
          'manufacturing': 150,
          'retail': 100,
          'education': 75,
          'construction': 125,
          'logistics': 100,
          'hospitality': 100,
          'wellness': 150,
          'beauty': 75
        };
        
        return premiums[industry] || 150;
      }
    }

    // Enhanced ROI Calculator function
    function calculateEnhancedROI() {
      const manualProcesses = parseInt(document.getElementById('manual-processes').value) || 0;
      const browserTasks = parseInt(document.getElementById('browser-tasks').value) || 0;
      const hoursPerProcess = parseInt(document.getElementById('hours-per-process').value) || 0;
      const hourlyRate = parseInt(document.getElementById('hourly-rate').value) || 0;
      
      const monthlyCost = (manualProcesses + browserTasks) * hoursPerProcess * hourlyRate * 4; // 4 weeks per month
      const annualCost = monthlyCost * 12;
      
      // Enhanced RPA cost (using Professional plan as example)
      const enhancedRpaMonthlyCost = 1199;
      const enhancedRpaAnnualCost = enhancedRpaMonthlyCost * 12;
      
      const monthlySavings = monthlyCost - enhancedRpaMonthlyCost;
      const annualSavings = annualCost - enhancedRpaAnnualCost;
      const roiPercentage = annualSavings > 0 ? Math.round((annualSavings / enhancedRpaAnnualCost) * 100) : 0;
      
      // Browser automation specific savings
      const browserAutomationSavings = browserTasks * hoursPerProcess * hourlyRate * 4 * 0.8; // 80% automation
      
      document.getElementById('enhanced-monthly-savings').textContent = `$${monthlySavings.toLocaleString()}`;
      document.getElementById('enhanced-annual-savings').textContent = `$${annualSavings.toLocaleString()}`;
      document.getElementById('enhanced-roi-percentage').textContent = `${roiPercentage}%`;
      document.getElementById('browser-automation-savings').textContent = `$${browserAutomationSavings.toLocaleString()}`;
    }

    // Initialize pricing when DOM is loaded
    document.addEventListener('DOMContentLoaded', () => {
      new EnhancedRPAPricing();
    });
