        document.querySelectorAll('.industry-pricing-tab').forEach(tab => {
          tab.addEventListener('click', (e) => {
            const industry = e.currentTarget.dataset.industry;
            this.selectIndustry(industry);
          });
        });
      }

      async selectIndustry(industry) {
        console.log(`üè≠ Selecting industry: ${industry}`);
        
        // Update UI
        document.querySelectorAll('.industry-pricing-tab').forEach(tab => {
          tab.classList.remove('border-blue-500', 'bg-blue-50');
          tab.classList.add('border-gray-200');
        });
        
        document.querySelector(`[data-industry="${industry}"]`).classList.add('border-blue-500', 'bg-blue-50');
        document.querySelector(`[data-industry="${industry}"]`).classList.remove('border-gray-200');
        
        this.currentIndustry = industry;
        
        // Show industry content
        const industryContent = document.getElementById('industry-pricing-content');
        industryContent.classList.remove('hidden');
        
        // Load industry-specific pricing
        await this.loadIndustryPricing(industry);
      }

      async loadIndustryPricing(industry) {
        try {
          const pricingData = this.pricingService.getIndustryPricing(industry);
          console.log(`üí∞ Loaded pricing data for ${industry}:`, pricingData);
          
          // Update pricing with industry-specific rates
          this.updatePricingTiers(pricingData);
          
        } catch (error) {
          console.error(`‚ùå Failed to load pricing for ${industry}:`, error);
        }
      }

      updatePricingTiers(pricingData) {
        if (!pricingData) return;
        
        // Update pricing tiers with industry-specific pricing
        const tiers = pricingData.basePricing;
        
        tiers.forEach((tier, index) => {
          const tierElement = document.querySelectorAll('.bg-white.p-8.rounded-lg.shadow-sm.border')[index];
          if (tierElement) {
            const priceElement = tierElement.querySelector('.text-4xl.font-bold.text-blue-600');
            if (priceElement) {
              priceElement.textContent = `$${tier.monthlyCost}`;
            }
          }
        });
      }
    }

    // ROI Calculator function
    function calculateROI() {
      const manualProcesses = parseInt(document.getElementById('manual-processes').value) || 0;
      const hoursPerProcess = parseInt(document.getElementById('hours-per-process').value) || 0;
      const hourlyRate = parseInt(document.getElementById('hourly-rate').value) || 0;
      
      const monthlyCost = manualProcesses * hoursPerProcess * hourlyRate * 4; // 4 weeks per month
      const annualCost = monthlyCost * 12;
      
      // RPA cost (using Professional plan as example)
      const rpaMonthlyCost = 799;
      const rpaAnnualCost = rpaMonthlyCost * 12;
      
      const monthlySavings = monthlyCost - rpaMonthlyCost;
      const annualSavings = annualCost - rpaAnnualCost;
      const roiPercentage = annualSavings > 0 ? Math.round((annualSavings / rpaAnnualCost) * 100) : 0;
      
      document.getElementById('monthly-savings').textContent = `$${monthlySavings.toLocaleString()}`;
      document.getElementById('annual-savings').textContent = `$${annualSavings.toLocaleString()}`;
      document.getElementById('roi-percentage').textContent = `${roiPercentage}%`;
    }

    // Initialize pricing when DOM is loaded
    document.addEventListener('DOMContentLoaded', () => {
      new RPAPricing();
    });
  </script>
